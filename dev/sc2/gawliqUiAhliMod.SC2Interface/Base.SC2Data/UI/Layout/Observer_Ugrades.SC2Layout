<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
<!-- UI created by gawliq ( https://www.reddit.com/user/gawliq )
	- chat button fix applied by skadi ( https://www.reddit.com/user/skadiskadi )
	- sc2 3.19.1 fix and UI code cleaning by Ahli ( https://twitter.com/AhliSC2 - https://sites.google.com/site/ahlismods/ )
-->
    <Constant name="offsetBetweenSlots" val="4"/>
    <Constant name="offsetButton" val="3"/>
    <Constant name="slotWidth" val="37"/>

    <!-- created by Ahli -->
    <!-- pips by MIT Game Lab -->
    <!-- slot width = height of button (for quadratic image) + offsetButton = 34 + ? -->
    <!-- Panel components -->
    <Frame type="Label" name="NumberLabelTemplate">
        <Anchor side="Bottom" relative="$parent/IconImage" pos="Max" offset="-1"/>
        <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
        <Height val="34"/>
        <Width val="0"/>
        <Unclipped val="true"/>
        <IgnoreParentColor val="true"/>
        <Style val="MiniPips"/>
        <RenderPriority val="555"/>
    </Frame>

    <!-- Individual Frame Templates -->
    <Frame type="UpgradeCountFrame" name="UpgradeCountFrameTemplate">
        <Height val="34"/>
        <Width val="#slotWidth"/>
        <AcceptsMouse val="false"/>
        <Visible val="false"/>
        <Unclipped val="false"/>
        <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
        <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>

        <Frame type="Label" name="NumberLabel" template="Observer_Upgrades/NumberLabelTemplate">
        </Frame>

        <Frame type="Button" name="BackgroundButton">
            <Anchor side="Left" relative="$parent" pos="Min" offset="#offsetButton"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Height val="34"/>
            <NormalImage val="NormalImage"/>
            <HoverImage val="HoverImage"/>
            <ClickSound val="@UI_ActionButtonSelect"/>
            <Visible val="false"/>

            <Frame type="Image" name="NormalImage">
                <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                <Texture val="Assets/Textures/White32.dds"/>
                <TextureType val="Normal"/>
                <DescFlags val="Internal"/>
            </Frame>

            <Frame type="Image" name="HoverImage">
                <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                <Texture val="Assets/Textures/White32.dds"/>
                <TextureType val="Normal"/>
                <DescFlags val="Internal"/>
            </Frame>
        </Frame>

        <Frame type="Image" name="IconImage">
            <Anchor side="Left" relative="$parent/BackgroundButton" pos="Min" offset="0"/>
            <Anchor side="Top" relative="$parent/BackgroundButton" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent/BackgroundButton" pos="Max" offset="0"/>
            <Anchor side="Bottom" relative="$parent/BackgroundButton" pos="Max" offset="0"/>
            <Texture val="@@UI/LeaderPanelUnitBackground"/>
            <TextureType val="Normal"/>
            <IgnoreParentColor val="true"/>
            <Unclipped val="false"/>
        </Frame>
    </Frame>

    <!--Frame Templates-->
    <Frame type="PlayerUpgradesFrame" name="PlayerUpgradesFrameTemplate">
        <Height val="70"/>
        <Width val="745"/>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame0" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame1" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame0" pos="Max" offset="#offsetBetweenSlots"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame2" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame1" pos="Max" offset="#offsetBetweenSlots"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame3" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame2" pos="Max" offset="#offsetBetweenSlots"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame4" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame3" pos="Max" offset="#offsetBetweenSlots"/>
        </Frame>

        <!-- offscreen ones to avoid error throwing, if more than 4 slots are required -->
        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame5" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame4" pos="Max" offset="9999"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame6" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame5" pos="Max" offset="9999"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame7" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame5" pos="Max" offset="9999"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame8" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame5" pos="Max" offset="9999"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame9" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame5" pos="Max" offset="9999"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame10" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame5" pos="Max" offset="9999"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame11" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame5" pos="Max" offset="9999"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame12" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame5" pos="Max" offset="9999"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame13" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame5" pos="Max" offset="9999"/>
        </Frame>

        <Frame type="UpgradeCountFrame" name="UpgradeCountFrame14" template="Observer_Upgrades/UpgradeCountFrameTemplate">
            <Anchor side="Left" relative="$parent\UpgradeCountFrame5" pos="Max" offset="9999"/>
        </Frame>
    </Frame>

    <Frame type="Frame" name="GameUI/UIContainer/FullscreenUpperContainer/ResourcePanel/ResourceFrame" file="GameUI">

        <Frame type="PlayerUpgradesFrame" name="LeftPlayerUpgradesFrame" template="Observer_Upgrades/PlayerUpgradesFrameTemplate">
            <Anchor side="Top" relative="$parent" pos="Min" offset="7"/>
            <Anchor side="Left" relative="$parent\$parent\$parent" pos="Max" offset="-834"/>
            <VersusModePlayerSide val="Left"/>
            <Unclipped val="true"/>
            <IgnoreUpgradesWithoutPriority val="true"/>
        </Frame>
    </Frame>

    <!-- thank you Blizzard for finally adding a filter property making weird complex workarounds not necessary anymore...
				before this, I had to exploit the label's width difference between empty and 1,2,3 to control the width of the UpgradeCountFrame's content via clever usage of anchors. ~Ahli -->
    <Frame type="Frame" name="GameUI/UIContainer/FullscreenUpperContainer/ResourcePanel/ResourceFrameSecond" file="GameUI">

        <Frame type="PlayerUpgradesFrame" name="RightPlayerUpgradesFrame" template="Observer_Upgrades/PlayerUpgradesFrameTemplate">
            <Anchor side="Top" relative="$parent" pos="Min" offset="7"/>
            <Anchor side="Left" relative="$parent\$parent\$parent" pos="Max" offset="-834"/>
            <VersusModePlayerSide val="Right"/>
            <Unclipped val="true"/>
            <IgnoreUpgradesWithoutPriority val="true"/>
        </Frame>
    </Frame>
</Desc>

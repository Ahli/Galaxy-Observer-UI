<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <!-- created by Ahli (twitter: @AhliSC2) -->
	<!-- @Hotkey (	constant = "Toggle Income Graph - Hotkey",
				default = "Shift+I",
				description = ""
				) -->
	<!-- @Hotkey (	constant = "Toggle Army Supply Graph - Hotkey",
				default = "Shift+A",
				description = ""
				) -->
    <Constant name="Toggle Income Graph - Hotkey" val="Shift+I"/>
    <Constant name="Toggle Army Supply Graph - Hotkey" val="Shift+A"/>
	
	<Frame type="Frame" name="GameUI/UIContainer" file="GameUI">
		<Frame type="Frame" name="FullscreenUpperContainer">
			
			<!-- WCS GameHeart extension mod adds GraphContainer -->
			<Frame type="Frame" name="GraphContainer">
				<Frame type="ToggleControl" name="IncomeGraph">
					<Frame type="Frame" name="Graph">
						<Anchor side="Top" relative="$parent" pos="Mid" offset="-65"/>
						<Anchor side="Bottom" relative="$parent" pos="Mid" offset="-65"/>
						
						<Frame type="Label" name="Title">
							<Style val="WCSPopupTitle"/>
						</Frame>
						<Frame type="Image" name="FullBackground">
							<Texture val="@WCS/RoundedRectangle_Small"/>
							<TextureType val="NineSlice"/>
							<Color val="34,37,49"/>
							<Alpha val="255"/>
						</Frame>
						<Frame type="Frame" name="GraphFrame">
							<Frame type="Image" name="InnerBackground">
								<Texture val="@WCS/RoundedRectangle_SmallBorder"/>
								<TextureType val="NineSlice"/>
								<Color val="98,116,131"/>
							</Frame>
						</Frame>
					</Frame>
					<Shortcut val="#Toggle Income Graph - Hotkey"/>
					<LinkedModalFrame val="$parent/ArmySizeGraph"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatResourcesFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatResourcesGasFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatArmySupplyFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatWorkerSupplyFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatArmyLostFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatWorkerLostFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatAPMFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatCPMFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/TopStatContainer"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/BottomStatContainer"/>
					<LinkedModalFrame val="$parent/$parent/$parent/ConsoleUIContainer/UnitsLostPopup"/>
				</Frame>
				<Frame type="ToggleControl" name="ArmySizeGraph">
					<Frame type="Frame" name="Graph">
						<Anchor side="Top" relative="$parent" pos="Mid" offset="-65"/>
						<Anchor side="Bottom" relative="$parent" pos="Mid" offset="-65"/>
						
						<Frame type="Label" name="Title">
							<Style val="WCSPopupTitle"/>
						</Frame>
						<Frame type="Image" name="FullBackground">
							<Texture val="@WCS/RoundedRectangle_Small"/>
							<TextureType val="NineSlice"/>
							<Color val="34,37,49"/>
							<Alpha val="255"/>
						</Frame>
						<Frame type="Frame" name="GraphFrame">
							<Frame type="Image" name="InnerBackground">
								<Texture val="@WCS/RoundedRectangle_SmallBorder"/>
								<TextureType val="NineSlice"/>
								<Color val="98,116,131"/>
							</Frame>
						</Frame>
					</Frame>
					<Shortcut val="#Toggle Army Supply Graph - Hotkey"/>
					<LinkedModalFrame val="$parent/IncomeGraph"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatResourcesFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatResourcesGasFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatArmySupplyFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatWorkerSupplyFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatArmyLostFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatWorkerLostFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatAPMFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/StatCPMFrame"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/TopStatContainer"/>
					<LinkedModalFrame val="$parent/$parent/PlayerStatPanel/BottomStatContainer"/>
					<LinkedModalFrame val="$parent/$parent/$parent/ConsoleUIContainer/UnitsLostPopup"/>
				</Frame>
			</Frame>
			
		</Frame>
		<Frame type="Frame" name="ConsoleUIContainer">
			
			<!-- hide other popups when Units Lost is opened -->
			<Frame type="ToggleControl" name="UnitsLostPopup">
				<!--<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/PlayerStatPanel/StatResourcesFrame"/>
				<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/PlayerStatPanel/StatResourcesGasFrame"/>
				<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/PlayerStatPanel/StatArmySupplyFrame"/>
				<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/PlayerStatPanel/StatWorkerSupplyFrame"/>
				<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/PlayerStatPanel/StatArmyLostFrame"/>
				<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/PlayerStatPanel/StatWorkerLostFrame"/>
				<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/PlayerStatPanel/StatAPMFrame"/>
				<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/PlayerStatPanel/StatCPMFrame"/>
				<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/PlayerStatPanel/TopStatContainer"/>
				<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/PlayerStatPanel/BottomStatContainer"/>-->
				<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/GraphContainer/IncomeGraph"/>
				<LinkedModalFrame val="$parent/$parent/FullscreenUpperContainer/GraphContainer/ArmySizeGraph"/>
			</Frame>
			
		</Frame>
    </Frame>
	
	<!-- hide other popups when comparison popups are opened -->
	<Frame type="Frame" name="ComparisonPopupTemplate">
		<Animation name="HideOtherPanels">
			<Event event="OnShown" action="Reset,Play"/>
			<!--<Controller type="Visibility" end="Pause" frame="$parent/$parent/$parent/ConsoleUIContainer/UnitsLostPopup">
				<Key type="Bool" time="0" value="false"/>
			</Controller>-->
			<Controller type="Visibility" end="Pause" frame="$parent/$parent/GraphContainer/IncomeGraph">
				<Key type="Bool" time="0" value="false"/>
			</Controller>
			<Controller type="Visibility" end="Pause" frame="$parent/$parent/GraphContainer/ArmySizeGraph">
				<Key type="Bool" time="0" value="false"/>
			</Controller>
		</Animation>
	</Frame>
	<Frame type="Frame" name="GameUI/UIContainer/FullscreenUpperContainer/PlayerStatPanel" file="GameUI">
		<Frame type="Frame" name="StatArmyLostFrame" template="AhliMod/ComparisonPopupTemplate">
		</Frame>
		<Frame type="Frame" name="StatResourcesFrame" template="AhliMod/ComparisonPopupTemplate">
		</Frame>
		<Frame type="Frame" name="StatArmySupplyFrame" template="AhliMod/ComparisonPopupTemplate">
		</Frame>
		<Frame type="Frame" name="StatAPMFrame" template="AhliMod/ComparisonPopupTemplate">
		</Frame>
		<Frame type="Frame" name="StatCPMFrame" template="AhliMod/ComparisonPopupTemplate">
		</Frame>
		<Frame type="Frame" name="StatWorkerLostFrame" template="AhliMod/ComparisonPopupTemplate">
		</Frame>
		<Frame type="Frame" name="StatWorkerSupplyFrame" template="AhliMod/ComparisonPopupTemplate">
		</Frame>
		<Frame type="Frame" name="StatResourcesGasFrame" template="AhliMod/ComparisonPopupTemplate">
		</Frame>
	</Frame>
	
	<!-- add new hotkeys -->
	<Frame type="MessageLogDialog" name="GameUI/UIContainer/FullscreenUpperContainer/MessageLogDialog/HotkeyFrame" file="GameUI">
        <Height val="1142"/>
		
		<Frame type="Frame" name="ToggleIncomeGraph" template="Pro2020_Panels_Hotkeys/HotkeyTemplate">
            <Anchor side="Top" relative="$parent/MultiplyTeamScore" pos="Max" offset="#HotkeyGapLong"/>
            <Frame type="Label" name="Description">
                <Text val="@WCS/HotkeyMenu/ToggleIncomeGraph"/>
            </Frame>
            <Frame type="Label" name="Hotkey">
                <Text val="@WCS/HotkeyMenu/Hotkey/ToggleIncomeGraph"/>
            </Frame>
        </Frame>
		<Frame type="Frame" name="ToggleArmySizeGraph" template="Pro2020_Panels_Hotkeys/HotkeyTemplate">
            <Anchor side="Top" relative="$parent/ToggleIncomeGraph" pos="Max" offset="#HotkeyGap"/>
            <Frame type="Label" name="Description">
                <Text val="@WCS/HotkeyMenu/ToggleArmySizeGraph"/>
            </Frame>
            <Frame type="Label" name="Hotkey">
                <Text val="@WCS/HotkeyMenu/Hotkey/ToggleArmySizeGraph"/>
            </Frame>
        </Frame>
		
	</Frame>
	
</Desc>
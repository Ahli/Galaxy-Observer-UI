<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>

    <!--

    =================================================

    2v2 PLAYER BAR TEMPLATE

    =================================================

    -->

        <Frame type="Frame" name="Template_PlayerBar">
            <Height val="#Height_MainBar"/>
            <CollapseLayout val="True"/>
            
            <Frame type="PlayerFrame" name="PlayerData" template="WCS_Templates_PlayerBar_Generic/Template_PlayerData">
                
                <!-- Background -->
                <Frame type="Image" name="PlayerBar_Background">
                    <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                    <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                    <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                    <Texture val="Assets/Textures/White.dds"/>
                    <Color val="#Color_PlayerBar_Background"/>
                    <Alpha val="#Alpha_PlayerBar_Background"/>
                </Frame>
                
                <Frame type="Image" name="PlayerBar_Background2">
                    <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                    <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                    <Height val="32"/>
                    <Texture val="Assets/Textures/White.dds"/>
                    <Color val="42,47,52"/>
                    <Alpha val="#Alpha_PlayerBar_Background"/>
                </Frame>
                
                <!-- Player Name Container -->
                <Frame type="Frame" name="PlayerNameContainer" template="WCS_Templates_PlayerBar_Generic/Template_PlayerIdentificationContainer">
                    <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                    <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                    <Height val="#Height_PlayerBar"/>
                </Frame>
                
                <!-- Player Supply Container -->
                <Frame type="PlayerSupplyFrame" name="Supply" template="WCS_Templates_PlayerBar_Generic/PlayerSupply_Template">
                    <Anchor side="Top" relative="$parent/PlayerNameContainer" pos="Max" offset="2"/>
                    <Anchor side="Bottom" relative="$parent/PlayerNameContainer" pos="Max" offset="40"/>
                    <Anchor side="Left" relative="$parent" pos="Min" offset="-8"/>
                    <Width val="#Width_Supply"/>
                </Frame>
                
                <Frame type="PlayerRaceIconFrame" name="SupplyIcon" template="WCS_Templates_PlayerBar_Generic/Template_DataIcon">
                    <Anchor side="Top" relative="$parent/PlayerBar_Background2" pos="Min" offset="2"/>
                    <Anchor side="Left" relative="$parent/Supply" pos="Min" offset="14"/>
                    <BaseTexture val="@WCS/Supply"/>
                </Frame>
                
                <!-- Player Minerals -->
                <Frame type="Frame" name="Minerals" template="WCS_Templates_PlayerBar_Generic/Template_Minerals">
                    <Anchor side="Top" relative="$parent/Supply" pos="Min" offset="0"/>
                    <Anchor side="Bottom" relative="$parent/Supply" pos="Max" offset="0"/>
                    <Anchor side="Left" relative="$parent/Supply" pos="Max" offset="0"/>
                    <Width val="#Width_Minerals_Short"/>
                </Frame>
                
                <Frame type="PlayerRaceIconFrame" name="MineralsIcon" template="WCS_Templates_PlayerBar_Generic/Template_DataIcon">
                    <Anchor side="Top" relative="$parent/PlayerBar_Background2" pos="Min" offset="2"/>
                    <Anchor side="Left" relative="$parent/Minerals" pos="Min" offset="0"/>
                    <BaseTexture val="@WCS/Minerals"/>
                </Frame>
                
                <!-- Player Gas -->
                <Frame type="Frame" name="Gas" template="WCS_Templates_PlayerBar_Generic/Template_Gas">
                    <Anchor side="Top" relative="$parent/Minerals" pos="Min" offset="0"/>
                    <Anchor side="Bottom" relative="$parent/Minerals" pos="Max" offset="0"/>
                    <Anchor side="Left" relative="$parent/Minerals" pos="Max" offset="0"/>
                    <Width val="#Width_Gas_Short"/>
                </Frame>
                
                <Frame type="PlayerRaceIconFrame" name="GasIcon" template="WCS_Templates_PlayerBar_Generic/Template_DataIcon">
                    <Anchor side="Top" relative="$parent/PlayerBar_Background2" pos="Min" offset="2"/>
                    <Anchor side="Left" relative="$parent/Gas" pos="Min" offset="-5"/>
                    <BaseTexture val="@WCS/Gas"/>
                </Frame>
                
                <!-- Player Workers -->
                <Frame type="Frame" name="Workers" template="WCS_Templates_PlayerBar_Generic/Template_Workers">
                    <Anchor side="Top" relative="$parent/Minerals" pos="Min" offset="0"/>
                    <Anchor side="Bottom" relative="$parent/Minerals" pos="Max" offset="0"/>
                    <Anchor side="Left" relative="$parent/Gas" pos="Max" offset="0"/>
                    <Width val="#Width_Workers_Short"/>
                    
                    <StateGroup name="16x9Only">
                        <State name="16x9">
                            <When type="Property" frame="$WCS_16x9" visible="True"/>
                            <Action type="SetProperty" frame="$this" visible="True"/>
                        </State>
                        
                        <State name="Not16x9">
                            <When type="Property" frame="$WCS_16x9" visible="False"/>
                            <Action type="SetProperty" frame="$this" visible="False"/>
                        </State>
                    </StateGroup>
                </Frame>
                
                <Frame type="Frame" name="WorkersIconContainer">
                    <Anchor side="Top" relative="$parent/PlayerBar_Background2" pos="Min" offset="2"/>
                    <Anchor side="Left" relative="$parent/Workers" pos="Min" offset="0"/>
                    <Width val="30"/>
                    <Height val="30"/>
                    
                    <Frame type="PlayerRaceIconFrame" name="WorkersIcon" template="WCS_Templates_PlayerBar_Generic/Template_DataIcon">
                        <Anchor relative="$parent"/>
                        <BaseTexture val="@WCS/Workers"/>
                    </Frame>
                    
                    <StateGroup name="16x9Only">
                        <State name="16x9">
                            <When type="Property" frame="$WCS_16x9" visible="True"/>
                            <Action type="SetProperty" frame="$this" visible="True"/>
                        </State>
                        
                        <State name="Not16x9">
                            <When type="Property" frame="$WCS_16x9" visible="False"/>
                            <Action type="SetProperty" frame="$this" visible="False"/>
                        </State>
                    </StateGroup>
                </Frame>
            </Frame>
        </Frame>
</Desc>
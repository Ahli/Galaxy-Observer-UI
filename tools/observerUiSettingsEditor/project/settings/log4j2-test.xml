<?xml version="1.0" encoding="UTF-8"?>
<!-- Configuration file for the logger. -->
<!-- Status = "trace", "debug", "info", "warn", "error" and "fatal" -->
<Configuration status="warn"
	packages="application.util.logger.log4j2plugin">
	<!-- Put -DLog4jContextSelector=org.apache.logging.log4j.core.async.AsyncLoggerContextSelector 
		into log4j2.component.properties file for async loggers. But they cause errors 
		for me. -->
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg %ex%n" />
		</Console>
		<!-- Async Loggers will auto-flush in batches, so switch off immediateFlush. -->
		<RandomAccessFile name="FileLastRun" fileName="${sys:user.home}/.GalaxyObsUiSettingsEditor/logs/settingsEditor_lastRun.log"
			immediateFlush="false" append="false">
			<PatternLayout
				pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg %ex%n" />
		</RandomAccessFile>
	</Appenders>
	<Loggers>
		<!-- Active Loggers -->
		<!-- Level = "trace", "debug", "info", "warn", "error", "fatal" -->
		<Root level="trace" includeLocation="false">
			<AppenderRef ref="Console" level="trace" />
			<AppenderRef ref="FileLastRun" level="trace" />
		</Root>

		<!-- <AsyncRoot level="info" includeLocation="false"> -->
		<!-- <AppenderRef ref="Console" level="info" /> -->
		<!-- <AppenderRef ref="JavaFXLogger" level="info" /> -->
		<!-- <AppenderRef ref="FileLastRun" level="trace" /> -->
		<!-- </AsyncRoot> -->


	</Loggers>
</Configuration>
<!-- 								should match the compiler's target version -->
<!-- 							<signature> -->
<!-- 								<groupId>org.codehaus.mojo.signature</groupId> -->
<!-- 								check: https://mvnrepository.com/artifact/org.codehaus.mojo.signature?sort=newest -->

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            prefHeight="480.0"
            prefWidth="640.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="application.controller.SettingsCommandLineToolController">
    <Label layoutX="22.0" layoutY="23.0" text="Verification:">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Label>
    <CheckBox fx:id="checkXml" layoutX="36.0" layoutY="49.0" mnemonicParsing="false" onAction="#onCheckXmlClick"
              text="check XML"/>
    <CheckBox fx:id="checkLayout" layoutX="36.0" layoutY="75.0" mnemonicParsing="false" onAction="#onCheckLayoutClick"
              text="check Layout files"/>
    <CheckBox fx:id="repairLayoutOrder" layoutX="36.0" layoutY="101.0" mnemonicParsing="false"
              onAction="#onRepairLayoutOrderClick" text="repair order of Layout files"/>
    <Label layoutX="22.0" layoutY="147.0" text="Compression / Protection:">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Label>
    <CheckBox fx:id="compressXml" layoutX="36.0" layoutY="173.0" mnemonicParsing="false" onAction="#onCompressXmlClick"
              text="compress XML"/>
    <Label layoutX="36.0" layoutY="199.0" text="MPQ compression:"/>
    <RadioButton fx:id="compressMpqNone" layoutX="86.0" layoutY="225.0" mnemonicParsing="false"
                 onAction="#onCompressMpqNoneClick" text="none (fast)"/>
    <RadioButton fx:id="compressMpqBlizz" layoutX="86.0" layoutY="251.0" mnemonicParsing="false"
                 onAction="#onCompressMpqBlizzClick" text="Blizzard's SC2/Heroes compression"/>
    <RadioButton fx:id="compressMpqExperimentalBest" layoutX="86.0" layoutY="277.0" mnemonicParsing="false"
                 onAction="#onCompressMpqExperimentalBestClick" text="apply best experimental compression"/>
    <RadioButton fx:id="compressMpqSystemDefault" layoutX="86.0" layoutY="303.0" mnemonicParsing="false"
                 onAction="#onCompressMpqSystemDefaultClick" text="System default"/>
    <CheckBox fx:id="buildUnprotectedToo" layoutX="36.0" layoutY="329.0" mnemonicParsing="false"
              onAction="#onBuildUnprotectedTooClick" text="build unprotected version, too"/>
    <Label fx:id="savedAnimLabel" alignment="CENTER_RIGHT" text="Settings saved!" textAlignment="RIGHT"
           AnchorPane.bottomAnchor="25.0" AnchorPane.rightAnchor="25.0">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>
    <Label layoutX="22.0" layoutY="375.0" text="Replay loading:">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Label>
    <CheckBox fx:id="heroesPtrActive" layoutX="36.0" layoutY="402.0" mnemonicParsing="false"
              onAction="#onHeroesPtrActiveClick" text="use Heroes of the Storm's PTR client instead of live client"/>
</AnchorPane>

			twitter.com/AhliSC2 -->

	<!-- Hotkeys -->

	<!-- information panel in the bottom center -->
	<Constant name="Hotkey - Toggle Talents" 										val="Control+1"/>
	<Constant name="Hotkey - Toggle Stats DEATH,DMG,ROLE"							val="Control+2"/>
	<Constant name="Hotkey - Toggle Stats APM"										val="Control+3"/>
	<Constant name="Hotkey - Toggle Stats Experience"								val="Control+4"/>
	<Constant name="Hotkey - Toggle Stats TimeDead,Deaths,SelfHealing,HealOther"	val="Control+5"/>
	<Constant name="Hotkey - Toggle Stats Mechanics"								val="Control+6"/>
	<Constant name="Hotkey - Toggle Stats Kills,Deaths,Assists"						val="Control+7"/>
	<Constant name="Hotkey - Toggle Stats TimeCCdEnemyHeroes"						val="Control+8"/>
	<Constant name="Hotkey - Toggle Unused 1"										val="Control+9"/>
	<Constant name="Hotkey - Toggle Unused 2"			 							val="Control+0"/>


	<!-- shows functionality for observers like the replay controls (hidden by default) -->
	<Constant name="Hotkey - Toggle ObserverTools"						val="Control+Shift+O"/>


	<!-- Hide the chat's visibility (visible by default) -->
	<Constant name="Hotkey - Toggle Chat"								val="Control+Shift+C"/>


	<!-- hide information about selected unit -->
	<Constant name="Hotkey - Toggle Unit selection UI (Khaldor Mode)"	val="Control+Alt+K"/>


	<!-- show information about the single selected unit -->
	<Constant name="Hotkey - Toggle Unit Stats"							val="Control+C"/>


	<!-- hides most UI, e.g. combat highlights -->
	<Constant name="Hotkey - Toggle UI"									val="Control+E"/>
	<!-- hides all UI, e.g. for movie makers -->
	<Constant name="Hotkey - Toggle all UI"								val="Control+Alt+U"/>


	<!-- shows the map scores (change score by clicking on it; team names and logos are read from Logos.StormMod in your documents folder) -->
	<Constant name="Hotkey - Toggle Map Scores"							val="Control+Shift+S"/>
	<Constant name="Hotkey - Increment Left Map Score"					val="Alt+S"/>
	<Constant name="Hotkey - Increment Right Map Score"					val="Alt+D"/>
	<Constant name="Hotkey - Decrement Left Map Score"					val="Control+Alt+S"/>
	<Constant name="Hotkey - Decrement Right Map Score"					val="Control+Alt+D"/>

	<!-- controls the offset of the bottomLeaderPanel, use values like "-75" to move it upwards -->
	<Constant name="LeaderPanelBottom - VerticalOffset"	val="0"/>
</Desc>
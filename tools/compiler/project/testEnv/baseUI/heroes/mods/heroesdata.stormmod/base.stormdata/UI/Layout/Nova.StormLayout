<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc> 

<Frame type="SelectionUnitStatusPanel" name="NovaBackplate" template="StandardHeroUITemplates/CircularHeroUIBackplateTemplate">
	<SpecificUnit val="HeroNova"/>
</Frame>

<Frame type="SelectionUnitStatusPanel" name="NovaFrame" template="StandardHeroUITemplates/CircularHeroUITemplate">
	<SpecificUnit val="HeroNova"/>

	<Frame type="UnitStatusFrame" name="UnitStatusFrame0">

		<Frame type="Image" name="MechanicTexture">
			<Texture val="Assets\Textures\storm_ui_icon_nova_personalcloaking.dds"/>
		</Frame>

		<Frame type="Frame" name="BottomBarFrame">
			<Frame type="Label" name="BottomBarLabel">
				<Text val="Anti Armor Shells"/>
			</Frame>
		</Frame>

		<Frame type="UnitStatusBehaviorIcon" name="NovaCloakCooldownFrame" template="StandardHeroUITemplates/BehaviorInnerCooldownProgressBar">
			<Behavior val="GenericCloakRevealer"/>

			<Animation name="OffCooldownAnim" template="StandardHeroUITemplates/PulseInAnimTemplate">
				<Event event="OnHidden" action="Reset, Play" frame="$this/BehaviorIcon"/>
			</Animation>
		</Frame>

		<Frame type="UnitStatusBehaviorIcon" name="NovaAntiArmorShellsProgressBar" template="StandardHeroUITemplates/BehaviorUpperCooldownBarTemplate">
			<Behavior val="NovaAntiArmorShellsWeaponSuppression"/>
			<Visible val="True"/>

			<Frame type="BehaviorIcon" name="BehaviorIcon">
				<Frame type="ProgressBar" name="CooldownBar">
					<InvertFill val="True"/>
				</Frame>
			</Frame>
		</Frame>

		<Frame type="UnitStatusBehaviorAnim" name="NovaHasAntiArmorShells" template="StandardHeroUITemplates/BehaviorAnimTemplate">
			<Behavior val="NovaAntiArmorShellsCarryBehavior"/>

			<Animation name="ShowUpperandBottomBars">
				<Event event="BehaviorCreate" action="Reset, Play"/>
				<Event event="BehaviorDestroy" action="Stop"/>

				<Controller type="Visibility" end="Pause" frame="$parent/UpperBarFrame">
					<Key type="Bool" time="0" value="True"/>
				</Controller>
				<Controller type="Visibility" end="Pause" frame="$parent/BottomBarFrame">
					<Key type="Bool" time="0" value="True"/>
				</Controller>
			</Animation>
		</Frame>
	</Frame>	
</Frame>
</Desc>
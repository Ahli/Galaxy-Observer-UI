                    </Frame>

                    <Frame type="TextFormatFrame" name="TooltipTextFormatFrame">
                        <FormatText val="@UI/ScreenStore/AnnouncerPackButtonTooltip"/>
                    </Frame>
                </Frame>
            </Frame>

            <TabListItem val="VoiceLineButton"/>

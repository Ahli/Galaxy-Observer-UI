<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc locked="true">
    <Frame type="WaitingForServerDialog" name="WaitingForServerDialog" template="StandardDialog/StandardDialogTemplate">
        <Anchor relative="$parent"/>

        <ReportsStats val="true"/>
        <Handle val="WaitingForServerDialog"/>

        <Frame type="Image" name="BackgroundFrame">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Height val="400"/>
        </Frame>

        <Frame type="Label" name="TitleLabel">
            <Text val="@UI/WaitingForServerDialogTitle"/>
            <Style val="DialogHeaderLabel"/>
            <Anchor side="Bottom" relative="$parent/MessageLabel" pos="Min" offset="-30"/>
            <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
        </Frame>

        <Frame type="Button" name="SurrenderButton" template="StandardTemplates/StandardButtonTemplate">
            <Anchor side="Bottom" relative="$parent/BackgroundFrame" pos="Max" offset="-60"/>
            <Anchor side="Left" relative="$parent/BackgroundFrame" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent/BackgroundFrame" pos="Mid" offset="0"/>
            <Text val="@UI/WaitingForServerSurrender_Control"/>
            <Visible val="false"/>
        </Frame>

        <Frame type="Label" name="MessageLabel">
            <Text val="@UI/WaitingForServerDialogMessage"/>
            <Style val="DialogMessageLabel"/>
        </Frame>
        
        <Frame type="Image" name="WaitingCycleImage">
            <Height val="15"/>
            <Anchor side="Top" relative="$parent/MessageLabel" pos="Max" offset="40"/>
            <Anchor side="Left" relative="$parent/MessageLabel" pos="Mid" offset="-20"/>
            <Anchor side="Right" relative="$parent/MessageLabel" pos="Mid" offset="20"/>
            <Texture val="@UI/Storm_HeroSelect_Icon_Pending0"/>

            <Animation name="WaitingShow">
                <Event event="OnShown" action="Reset"/>
                <Event event="OnShown" action="Play"/>
                <Controller type="Texture" end="Loop">
                    <Key type="Image" time="0.0" image="@UI/Storm_HeroSelect_Icon_Pending0"/>
                    <Key type="Image" time="0.5" image ="@UI/Storm_HeroSelect_Icon_Pending1"/>
                    <Key type="Image" time="1.0" image ="@UI/Storm_HeroSelect_Icon_Pending2"/>
                    <Key type="Image" time="1.5" image ="@UI/Storm_HeroSelect_Icon_Pending3"/>
                    <Key type="Image" time="2.0" image ="@UI/Storm_HeroSelect_Icon_Pending3"/>
                </Controller>
            </Animation>
        </Frame>
        
        <Frame type="Button" name="Button">
            <Visible val="false"/>
        </Frame>
    </Frame>
</Desc>

<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <DescFlags val="Locked"/>
    <Constant name="SectionTextOffset" val="-5"/>
    <Constant name="MapObjectiveOverlayColor" val="f76a22"/>

    <Frame type="Frame" name="ScreenMapLoading_PunisherArena" template="LoadingShared/ArenaLoadingTemplate">
        <Anchor relative="$parent"/>
        
        <!--=======================================================================================
        <! MAP MECHANICS 1
        <!======================================================================================-->
        <Frame type="Frame" name="MapObjective1">
            <Frame type="Image" name="BucketFrame">
                <AdjustmentColor val="#MapObjectiveOverlayColor"/>
            </Frame>

            <Frame type="Image" name="Icon">
                <Anchor side="Top" relative="$parent/IconAnchorFrame" pos="Mid" offset="0"/>
                <Anchor side="Bottom" relative="$parent/IconAnchorFrame" pos="Mid" offset="0"/>
                <Anchor side="Left" relative="$parent/IconAnchorFrame" pos="Mid" offset="3"/>
                <Anchor side="Right" relative="$parent/IconAnchorFrame" pos="Mid" offset="3"/>
                <Texture val="Assets\Textures\ui_ingame_mapmechanic_loadscreen_shrines_icon2.dds"/>
                <ScaleWidthToTexture val="true"/>
                <Height val="210"/>
            </Frame>

            <Frame type="Label" name="ObjectiveTitle">
                <Text val="@UI/MapLoadingScreen/PunisherArena/Title1"/>
                <Style val="Storm_MapLoading_SectionTitleText_Red"/>
            </Frame>
            
            <Frame type="Label" name="ObjectiveDescription">
                <Text val="@UI/MapLoadingScreen/PunisherArena/Description1"/>
                <Style val="Storm_MapLoading_SectionText_Red"/>
            </Frame>
        </Frame>

        <!--=======================================================================================
        <! MAP MECHANICS 2
        <!======================================================================================-->
        <Frame type="Frame" name="MapObjective2">
            <Frame type="Image" name="BucketFrame">
                <AdjustmentColor val="#MapObjectiveOverlayColor"/>
            </Frame>

            <Frame type="Image" name="Icon">
                <Anchor side="Top" relative="$parent/IconAnchorFrame" pos="Mid" offset="-5"/>
                <Anchor side="Bottom" relative="$parent/IconAnchorFrame" pos="Mid" offset="-5"/>
                <Anchor side="Left" relative="$parent/IconAnchorFrame" pos="Mid" offset="3"/>
                <Anchor side="Right" relative="$parent/IconAnchorFrame" pos="Mid" offset="3"/>
                <Texture val="Assets\Textures\ui_ingame_mapmechanic_loadscreen_punisherarena_icon2.dds"/>
                <ScaleWidthToTexture val="true"/>
                <Height val="220"/>
            </Frame>
            
            <Frame type="Label" name="ObjectiveTitle">
                <Text val="@UI/MapLoadingScreen/PunisherArena/Title2"/>
                <Style val="Storm_MapLoading_SectionTitleText_Red"/>
            </Frame>
            
            <Frame type="Label" name="ObjectiveDescription">
                <Text val="@UI/MapLoadingScreen/PunisherArena/Description2"/>
                <Style val="Storm_MapLoading_SectionText_Red"/>
            </Frame>
        </Frame>
    </Frame>
</Desc>

<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <DescFlags val="Locked"/>

    <Frame type="BrawlStatPanel" name="BrawlBadgeTemplate">
        <Width val="#SummaryContainerWidth"/>
        <Height val="#SummaryContainerHeight"/>
        <AcceptsMouse val="true"/>
        <TooltipAnchorPosition val="TopRight"/>

        <Frame type="Image" name="BrawlBackground">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            <Texture val="@UI/Storm_UI_ProfileDialog_Summary_HeroTotal_Background"/>
        </Frame>

        <Frame type="Label" name="BrawlLabel">
            <Anchor side="Top" relative="$parent/BrawlBackground" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/BrawlBackground" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent/BrawlBackground" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent/BrawlBackground" pos="Max" offset="0"/>

            <Style val="PlayerProfileProgressBadgeHeroLabel"/>
        </Frame>

        <Frame type="Label" name="BrawlHeaderLabel">
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Top" relative="$parent/BrawlBackground" pos="Max" offset="0"/>
            <Text val="Header"/>
            <Unclipped val="True"/>
            <Style val="PlayerProfileTextBrawlStatLabel"/>
        </Frame>

        <Animation name="Intro">
            <Event event="OnShown" action="Reset" frame="$parent"/>
            <Event event="OnShown" action="Play" frame="$parent"/>
            <Controller type="Fade" end="Pause">
                <Key type="Curve" time="0" value="0" out="Slow"/>
                <Key type="Curve" time=".2" value="255" in="Slow"/>
            </Controller>
            <Controller type="Anchor" end="Pause" side="Top" relative="true">
                <Key type="Curve" time="0.0" value="-30" out="Slow"/>
                <Key type="Curve" time=".4" value="0" in="Slow"/>
            </Controller>
        </Animation>
    </Frame>

    <Frame type="ProfileDialog" name="ProfileDialog" file="ProfileDialog">
        <Frame type="ProfileSummaryPanel" name="SummaryPanel" template="ProfileSummaryPanel/ProfileSummaryPanelTemplate">
            <Frame type="Frame" name="BrawlHeaderLabel" template="ProfileSummaryPanel/SummarySubHeaderTemplate">
                <Anchor side="Top" relative="$parent/RankedHeaderLabel" pos="Min" offset="0"/>
                <Anchor side="Left" relative="$parent/RankedHeaderLabel" pos="Max" offset="19"/>

                <Frame type="Label" name="HeaderLabel">
                    <Text val="@UI/ProfileDialog/BrawlHeader"/>
                    <Unclipped val="True"/>
                </Frame>
            </Frame>

            <Frame type="BrawlStatPanel" name="BrawlWins" template="ProfileSummaryPanelOverride/BrawlBadgeTemplate">
                <Anchor side="Top" relative="$parent/BrawlHeaderLabel" pos="Max" offset="#SummaryContainerTopOffset"/>
                <Anchor side="Left" relative="$parent/BrawlHeaderLabel" pos="Min" offset="0"/>
                <BrawlStatType val="TotalWins"/>

                <Frame type="Label" name="BrawlHeaderLabel">
                    <Text val="@UI/ProfileDialog/BrawlsWon"/>
                </Frame>
            </Frame>

            <Frame type="BrawlStatPanel" name="BrawlTotalRewards" template="ProfileSummaryPanelOverride/BrawlBadgeTemplate">
                <Anchor side="Top" relative="$parent/BrawlWins" pos="Max" offset="#SummaryContainerTopOffset"/>
                <Anchor side="Left" relative="$parent/BrawlHeaderLabel" pos="Min" offset="0"/>
                <BrawlStatType val="TotalRewards"/>

                <Frame type="Label" name="BrawlHeaderLabel">
                    <Text val="@UI/ProfileDialog/WeeklyReward"/>
                </Frame>
            </Frame>
        </Frame>
    </Frame>
</Desc>



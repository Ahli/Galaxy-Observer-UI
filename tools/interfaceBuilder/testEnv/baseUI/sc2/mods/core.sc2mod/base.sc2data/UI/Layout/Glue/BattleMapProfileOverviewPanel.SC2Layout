<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <DescFlags val="Locked"/>
    
    <Constant name="GameInfoPageButtonSpacing" val="12"/>

    <Frame type="BattleMapScreenshotTileListItem" name="BattleMapScreenshotTileListItemTemplate">
        <Width val="580"/>
        <Height val="435"/>
        
        <Frame type="Image" name="ScreenshotImage">
            <Anchor relative="$parent"/>
            <ImageMaskTexture val="@UI/SC2_UI_Battlenet_Glue_Arcade_ScreenshotMask"/>
        </Frame>

        <Frame type="Image" name="CaptionBackground">
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Top" relative="$parent/CaptionLabel" pos="Min" offset="-10"/>
            <Texture val="@UI/SC2_UI_Battlenet_Glue_Arcade_ScreenshotCaptionBg"/>
            <TextureType val="NineSlice"/>
            <Alpha val="140"/>

            <StateGroup name="GameInfoStateGroup">
                <DefaultState val="ShowCaption"/>
                
                <State name="NoCaption">
                    <When type="Property" frame="$parent/CaptionLabel" Text=""/>
                    <Action type="SetProperty" frame="$this" Visible="false"/>
                </State>
                
                <State name="HideCaption">
                    <When type="Property" frame="$parent/CaptionLabel" Visible="False"/>
                    <Action type="SetProperty" frame="$this" Visible="False"/>
                </State>

                <State name="ShowCaption">
                    <When type="Property" frame="$parent/CaptionLabel" Visible="True"/>
                    <Action type="SetProperty" frame="$this" Visible="True"/>
                </State>
            </StateGroup>
        </Frame>
        
        <Frame type="Label" name="CaptionLabel">
            <Anchor side="Left" relative="$parent/CaptionBackground" pos="Min" offset="20"/>
            <Anchor side="Right" relative="$parent/CaptionBackground" pos="Max" offset="-20"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="-10"/>
            <Style val="@Arcade_GameInfo_Caption"/>
            <Visible val="false"/>

            <Animation name="HideCaption">
                <Event event="OnMouseEnter" action="Reset,Play" frame="$parent/$parent/PageSelector/IncrementButton"/>
                <Event event="OnMouseExit" action="Reset,Stop" frame="$parent/$parent/PageSelector/IncrementButton"/>

                <Controller type="Visibility" end="Pause">
                    <Key type="Bool" time="0" value="true"/>
                </Controller>
            </Animation>
        </Frame>
    </Frame>

    <Frame type="BattleMapInfoPanel" name="BattleMapInfoPanelTemplate">
        <Anchor relative="$parent"/>
        <!-- Available Animation Events: -->
        <!-- Empty: No game selected -->
        <!-- Loading: Loading game info -->
        <!-- Loaded: Game info complete -->

        <Frame type="BattleMapFrame" name="BattleMapFrame">
            <Anchor relative="$parent"/>
            <MapHandle val="{$parent/@MapHandle}"/>
        </Frame>

        <Frame type="BattleMapRatingFrame" name="BattleMapRatingFrame">
            <Anchor relative="$parent"/>
            <MapHandle val="{$parent/@MapHandle}"/>
        </Frame>

        <Frame Type="BattleUserContextMenu" name="UserContextMenu" template="BattleUserContextMenu/BattleUserContextMenu">
            <Anchor side="Top" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
        </Frame>

        <Frame type="Image" name="ScreenshotsBackground">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent/ScreenshotTileList" pos="Max" offset="9"/>
            <Height val="490"/>
            <Texture val="@UI/Glues_Battlenet_PageAssets_TableSmallHeaderBg"/>
            <TextureType val="NineSlice"/>
            <Tiled val="True"/>
        </Frame>

        <Frame type="Label" name="ScreenshotTitle">
            <Anchor side="Top" relative="$parent/ScreenshotsBackground" pos="Min" offset="15"/>
            <Anchor side="Left" relative="$parent/ScreenshotsBackground" pos="Min" offset="18"/>
            <Style val="@Arcade_GameInfo_SectionTitle"/>
            <Text val="@UI/BattleMapInfoPanel/ScreenshotsTitle"/>
        </Frame>

        <Frame type="BattleMapGameInfoScreenshotTileList" name="ScreenshotTileList">
            <Anchor side="Top" relative="$parent/ScreenshotsBackground" pos="Min" offset="45"/>
            <Anchor side="Left" relative="$parent/ScreenshotsBackground" pos="Min" offset="10"/>
            <Width val="580"/>
            <Height val="435"/>
            <Visible val="False"/>
            <MapHandle val="{$parent/@MapHandle}"/>
            
            <Frame type="Image" name="BattleMapInfoBg">
                <Anchor side="Top" relative="$parent/Item0" pos="Min" offset="0"/>
                <Anchor side="Bottom" relative="$parent/Item0" pos="Max" offset="0"/>
                <Anchor side="Left" relative="$parent/Item0" pos="Min" offset="0"/>
                <Anchor side="Right" relative="$parent/Item0" pos="Max" offset="0"/>
                <LayerColor val="02060b"/>
                <Alpha val="0"/>
            </Frame>

            <!-- This shows if the map has no screenshots -->
            <Frame type="BattleMapIcon" name="MapIcon">
                <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                <Anchor side="Bottom" relative="$parent/Item0" pos="Max" offset="0"/>

                <Frame type="Image" name="Image">
                    <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                    <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
                    <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
                    <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                    <ScaleWidthToTexture val="true"/>
                    <TextureType val="Normal"/>
                    <AutoSizeClamps maxWidth="723"/>
                </Frame>
            </Frame>

            <Frame type="BattleMapScreenshotTileListItem" name="Item0" template="BattleMapProfileOverviewPanel/BattleMapScreenshotTileListItemTemplate">
                <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            </Frame>

            <Frame type="PageSelectorButtonList" name="PageSelector" template="StandardElementsTemplates/PageSelectorButtonListTemplate">

                <Animation name="HideDisabled">
                    <Event event="OnEnabled" action="Reset,Stop"/>
                    <Event event="OnDisabled" action="Reset,Play"/>

                    <Controller type="Visibility" end="Pause">
                        <Key type="Bool" time="0" value="false"/>
                    </Controller>
                </Animation>
            </Frame>
        </Frame>

        <Frame type="Image" name="DetailsBackground">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent/ScreenshotsBackground" pos="Max" offset="-5"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Bottom" relative="$parent/ScreenshotsBackground" pos="Max" offset="0"/>
            <Texture val="@UI/Glues_Battlenet_PageAssets_TableSmallHeaderBg"/>
            <TextureType val="NineSlice"/>
            <Tiled val="True"/>
        </Frame>

        <Frame type="Label" name="NameLabel">
            <Anchor side="Top" relative="$parent/ScreenshotTileList" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="17"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="-17"/>
            <Style val="@Arcade_GameInfo_Title"/>
            <Visible val="False"/>
        </Frame>

        <Frame type="Label" name="DetailsTitle">
            <Anchor side="Top" relative="$parent/DetailsBackground" pos="Min" offset="15"/>
            <Anchor side="Left" relative="$parent/DetailsBackground" pos="Min" offset="18"/>
            <Anchor side="Right" relative="$parent/DetailsBackground" pos="Max" offset="-18"/>
            <Style val="@Arcade_GameInfo_SectionTitle"/>
            <Text val="@UI/BattleMapInfoPanel/DetailsTitle"/>
        </Frame>

        <Frame type="Label" name="AuthorTitle">
            <Anchor side="Top" relative="$parent/DetailsBackground" pos="Min" offset="56"/>
            <Anchor side="Left" relative="$parent/DetailsBackground" pos="Min" offset="22"/>
            <Style val="@Arcade_GameInfo_Author"/>
            <Text val="@UI/BattleMapInfoPanel/AuthorTitle"/>
            <Visible val="False"/>
        </Frame>
        
        <Frame type="Label" name="AuthorLabel">
            <Anchor side="Top" relative="$parent/AuthorTitle" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent/AuthorTitle" pos="Max" offset="0"/>
            <Style val="@Arcade_GameInfo_Description"/>
            <Visible val="False"/>
            <AcceptsMouse val="true"/>
            <ContextMenu val="$parent/UserContextMenu"/>
            <ContextMenuButtons val="Left|Right"/>
        </Frame>

        <Frame type="Image" name="BlizzardImage">
            <Anchor side="Top" relative="$parent/AuthorLabel" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/AuthorLabel" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent/AuthorLabel" pos="Max" offset="2"/>
            <Texture val="@UI/Glues_Icons_BlizzIcon"/>
            <Width val="38"/>
            <Height val="29"/>
            <Visible val="False"/>
        </Frame>

        <Frame type="Label" name="AvgRatingTitle">
            <Anchor side="Top" relative="$parent/AuthorTitle" pos="Max" offset="5"/>
            <Anchor side="Left" relative="$parent/AuthorTitle" pos="Min" offset="0"/>
            <Style val="@Arcade_GameInfo_Author"/>
            <Text val="@UI/BattleMapInfoPanel/AverageRatingTitle"/>
            <Visible val="False"/>
        </Frame>

        <Frame type="ProgressBar" name="RatingProgressBar">
            <Anchor side="Top" relative="$parent/AvgRatingTitle" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/AvgRatingTitle" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent/AvgRatingTitle" pos="Max" offset="0"/>
            <Width val="64"/>
            <Height val="14"/>
            <Texture val="@UI/SC2_UI_Battlenet_Glue_Arcade_RatingStarsMini"/>
            <Color val="FFFFFF"/>
            <ColorStep val="FFFFFF"/>
            <MinValue val="0"/>
            <MaxValue val="5"/>
            <Visible val="False"/>
            <Value val="{$parent/BattleMapRatingFrame/@AverageRating}"/>
        </Frame>

        <Frame type="TextFormatFrame" name="RatingsCountFormatFrame">
            <Anchor relative="$parent"/>
            <FormatText val="@UI/BattleMap/RatingsCount"/>
            <Replacement index="0" val="{$parent/BattleMapRatingFrame/@RatingsCount}"/>
        </Frame>
        
        <Frame type="Label" name="RatingsCountLabel">
            <Anchor side="Top" relative="$parent/AvgRatingTitle" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent/RatingProgressBar" pos="Max" offset="5"/>
            <Style val="@Arcade_GameInfo_Description"/>
            <Visible val="False"/>
            <Text val="{$parent/RatingsCountFormatFrame/@Text}"/>
        </Frame>

        <Frame type="Label" name="YourRatingTitle">
            <Anchor side="Top" relative="$parent/AvgRatingTitle" pos="Max" offset="5"/>
            <Anchor side="Left" relative="$parent/AvgRatingTitle" pos="Min" offset="0"/>
            <Style val="@Arcade_GameInfo_Author"/>
            <Text val="@UI/BattleMapInfoPanel/YourRatingTitle"/>
            <Visible val="False"/>
        </Frame>

        <Frame type="BattleMapRatingSelector" name="RatingSelector" template="StandardBattlenetTemplates/BattleMapRatingSelectorSmallTemplate">
            <Anchor side="Top" relative="$parent/YourRatingTitle" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/YourRatingTitle" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent/YourRatingTitle" pos="Max" offset="0"/>
            <SendRatingOnSelect val="true"/>
        </Frame>

        <Frame type="Label" name="PlayersTitle">
            <Anchor side="Top" relative="$parent/YourRatingTitle" pos="Max" offset="5"/>
            <Anchor side="Left" relative="$parent/YourRatingTitle" pos="Min" offset="0"/>
            <Style val="@Arcade_GameInfo_Author"/>
            <Text val="@UI/BattleMapInfoPanel/PlayersTitle"/>
            <Visible val="False"/>
            <CollapseLayout val="true"/>
        </Frame>

        <Frame type="Label" name="PlayerLabel">
            <Anchor side="Top" relative="$parent/PlayersTitle" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent/PlayersTitle" pos="Max" offset="0"/>
            <Style val="@Arcade_GameInfo_Description"/>
            <Visible val="False"/>
            <CollapseLayout val="true"/>
        </Frame>

        <Frame type="Label" name="GenreTitle">
            <Anchor side="Top" relative="$parent/PlayersTitle" pos="Max" offset="5"/>
            <Anchor side="Left" relative="$parent/PlayersTitle" pos="Min" offset="0"/>
            <Style val="@Arcade_GameInfo_Author"/>
            <Text val="@UI/BattleMapInfoPanel/GenreTitle"/>
            <Visible val="False"/>
            <CollapseLayout val="true"/>
        </Frame>

        <Frame type="Label" name="GenreLabel">
            <Anchor side="Top" relative="$parent/GenreTitle" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent/GenreTitle" pos="Max" offset="0"/>
            <Anchor side="Right" relative="$parent/DetailsBackground" pos="Max" offset="-18"/>
            <Style val="@Arcade_GameInfo_Description"/>
            <Visible val="False"/>
            <CollapseLayout val="true"/>
            <Text val="{$parent/BattleMapFrame/@Genre}"/>
        </Frame>

        <Frame type="Label" name="ModeLabel">
            <Anchor side="Top" relative="$parent/RatingProgressBar" pos="Mid" offset="2"/>
            <Anchor side="Bottom" relative="$parent/RatingProgressBar" pos="Mid" offset="2"/>
            <Anchor side="Right" relative="$parent/DetailsBackground" pos="Max" offset="-18"/>
            <Style val="@Arcade_GameInfo_Author"/>
            <Visible val="False"/>
        </Frame>

        <Frame type="Label" name="DescriptionLabel">
            <Anchor side="Top" relative="$parent/GenreLabel" pos="Max" offset="25"/>
            <Anchor side="Bottom" relative="$parent/WebsiteLabel" pos="Min" offset="-10"/>
            <Anchor side="Left" relative="$parent/GenreTitle" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent/DetailsBackground" pos="Max" offset="-18"/>
            <Style val="@Arcade_GameInfo_LongDescription"/>
            <AcceptsMouse val="true"/>
            <Text val="{$parent/BattleMapFrame/@Description}"/>
            <Options val="Ellipsis | TooltipIfTruncated | NewLineIfTruncated"/>
        </Frame>

        <Frame type="Label" name="WebsiteLabel">
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="-15"/>
            <Anchor side="Left" relative="$parent/DescriptionLabel" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent/DetailsBackground" pos="Max" offset="-18"/>
            <Style val="@Arcade_GameInfo_Author"/>
            <AcceptsMouse val="true"/>
        </Frame>
        
        <Frame type="Frame" name="InfoEmpty">
            <Anchor relative="$parent"/>
            <Visible val="False"/>
            
            <Frame type="Label" name="EmptyLabel">
                <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="40"/>
                <Anchor side="Right" relative="$parent" pos="Max" offset="-40"/>
                <Style val="@Arcade_ListError"/>
                <Text val="@UI/BattleMapInfoPanel/Empty"/>
            </Frame>
        </Frame>
        
        <Frame type="Frame" name="InfoDownloading">
            <Anchor relative="$parent"/>
            <Visible val="False"/>
            
            <Frame type="Frame" name="IdleSpinner" template="StandardBattlenetTemplates/IdleSpinnerTemplate">
                <Anchor side="Top" relative="$parent" pos="Mid" offset="-100"/>
                <Anchor side="Bottom" relative="$parent" pos="Mid" offset="-100"/>
                <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            </Frame>
        </Frame>
        
        <!-- 

        INFO STATE ANIMATIONS
        
        -->
        
        <StateGroup name="GameInfoStateGroup">
            <DefaultState val="EmptyState"/>
            
            <State name="LoadingState">
                <When type="AnimationState" frame="$this" GameInfo="Loading"/>
                <Action type="SetProperty" frame="ScreenshotTileList" visible="false"/>
                <Action type="SetProperty" frame="AuthorLabel" visible="false"/>
                <Action type="SetProperty" frame="RatingProgressBar" visible="false"/>
                <Action type="SetProperty" frame="RatingsCountLabel" visible="false"/>
                <Action type="SetProperty" frame="DescriptionLabel" visible="false"/>
                <Action type="SetProperty" frame="WebsiteLabel" visible="false"/>
                <Action type="SetProperty" frame="AuthorTitle" visible="false"/>
                <Action type="SetProperty" frame="AvgRatingTitle" visible="false"/>
                <Action type="SetProperty" frame="YourRatingTitle" visible="false"/>
                <Action type="SetProperty" frame="InfoEmpty" visible="false"/>
                <Action type="SetProperty" frame="InfoDownloading" visible="true"/>
            </State>

            <State name="LoadedState">
                <When type="AnimationState" frame="$this" GameInfo="Loaded"/>
                <Action type="SetProperty" frame="ScreenshotTileList" visible="true"/>
                <Action type="SetProperty" frame="AuthorLabel" visible="true"/>
                <Action type="SetProperty" frame="RatingProgressBar" visible="true"/>
                <Action type="SetProperty" frame="RatingsCountLabel" visible="true"/>
                <Action type="SetProperty" frame="DescriptionLabel" visible="true"/>
                <Action type="SetProperty" frame="WebsiteLabel" visible="true"/>
                <Action type="SetProperty" frame="AuthorTitle" visible="true"/>
                <Action type="SetProperty" frame="AvgRatingTitle" visible="true"/>
                <Action type="SetProperty" frame="YourRatingTitle" visible="true"/>
                <Action type="SetProperty" frame="InfoEmpty" visible="false"/>
                <Action type="SetProperty" frame="InfoDownloading" visible="false"/>
            </State>
            
            <State name="EmptyState">
                <When type="AnimationState" frame="$this" GameInfo="Empty"/>
                <Action type="SetProperty" frame="ScreenshotTileList" visible="false"/>
                <Action type="SetProperty" frame="AuthorLabel" visible="false"/>
                <Action type="SetProperty" frame="RatingProgressBar" visible="false"/>
                <Action type="SetProperty" frame="RatingsCountLabel" visible="false"/>
                <Action type="SetProperty" frame="DescriptionLabel" visible="false"/>
                <Action type="SetProperty" frame="WebsiteLabel" visible="false"/>
                <Action type="SetProperty" frame="AuthorTitle" visible="false"/>
                <Action type="SetProperty" frame="AvgRatingTitle" visible="false"/>
                <Action type="SetProperty" frame="YourRatingTitle" visible="false"/>
                <Action type="SetProperty" frame="InfoEmpty" visible="true"/>
                <Action type="SetProperty" frame="InfoDownloading" visible="false"/>
            </State>
        </StateGroup>
        
        <StateGroup name="ModStateGroup">
            <DefaultState val="EmptyState"/>
            
            <State name="LoadingState">
                <When type="AnimationState" frame="$this" GameInfo="Loading"/>
                <Action type="SetProperty" frame="GenreLabel" visible="false"/>
                <Action type="SetProperty" frame="GenreTitle" visible="false"/>
                <Action type="SetProperty" frame="PlayerLabel" visible="false"/>
                <Action type="SetProperty" frame="PlayersTitle" visible="false"/>
            </State>

            <State name="LoadedStateMod">
                <When type="AnimationState" frame="$this" GameInfo="Loaded"/>
                <When type="AnimationState" frame="$this" ModState="Mod"/>
                <Action type="SetProperty" frame="GenreLabel" visible="false"/>
                <Action type="SetProperty" frame="GenreTitle" visible="false"/>
                <Action type="SetProperty" frame="PlayerLabel" visible="false"/>
                <Action type="SetProperty" frame="PlayersTitle" visible="false"/>
            </State>

            <State name="LoadedState">
                <When type="AnimationState" frame="$this" GameInfo="Loaded"/>
                <Action type="SetProperty" frame="GenreLabel" visible="true"/>
                <Action type="SetProperty" frame="GenreTitle" visible="true"/>
                <Action type="SetProperty" frame="PlayerLabel" visible="true"/>
                <Action type="SetProperty" frame="PlayersTitle" visible="true"/>
            </State>
            
            <State name="EmptyState">
                <When type="AnimationState" frame="$this" GameInfo="Empty"/>
                <Action type="SetProperty" frame="GenreLabel" visible="false"/>
                <Action type="SetProperty" frame="GenreTitle" visible="false"/>
                <Action type="SetProperty" frame="PlayerLabel" visible="false"/>
                <Action type="SetProperty" frame="PlayersTitle" visible="false"/>
            </State>
        </StateGroup>

        <StateGroup name="ArcadeStateGroup">
            <State name="ArcadeState">
                <When type="AnimationState" frame="$this" ArcadeState="Arcade"/>
                <Action type="SetProperty" frame="GenreTitle" Text="@UI/BattleMapInfoPanel/GenreTitle"/>
            </State>
            
            <State name="NotArcadeState">
                <When type="AnimationState" frame="$this" ArcadeState="NotArcade"/>
                <Action type="SetProperty" frame="GenreTitle" Text="@UI/BattleMapInfoPanel/GenreMeleeTitle"/>
            </State>
        </StateGroup>

        <StateGroup name="AuthorStateGroup">
            <State name="BlizzardState">
                <When type="AnimationState" frame="$this" MapAuthorState="Blizzard"/>
                <Action type="SetProperty" frame="BlizzardImage" Visible="true"/>
            </State>
            
            <State name="NonBlizzardState">
                <When type="AnimationState" frame="$this" MapAuthorState="NonBlizzard"/>
                <Action type="SetProperty" frame="BlizzardImage" Visible="false"/>
            </State>
        </StateGroup>
    </Frame>

    <Frame type="BattleMapProfileOverviewPanel" name="BattleMapProfileOverviewPanelTemplate">
        <Frame type="BattleMapInfoPanel" name="MapInfoPanel" template="BattleMapProfileOverviewPanel/BattleMapInfoPanelTemplate">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
        </Frame>
    </Frame>
</Desc>

<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <Constant name="ColorMinimapButtonIcon" val="40,125,75"/>
    <Constant name="ColorMinimapButtonIcon_Prot" val="110,170,255"/>
    <Constant name="ColorMinimapButtonIcon_Terr" val="40,125,75"/>
    <Constant name="ColorMinimapButtonIcon_Zerg" val="245,140,70"/>

    <Frame type="Button" name="MinimapButtonTemplate">
        <HighlightOnHover val="true"/>
        <HighlightOnFocus val="true"/>
        <Width val="48"/>
        <Height val="48"/>
        <ClickSound val="@UI_MiniMapPanelButtonSelect"/>

        <Frame type="Image" name="NormalImage">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            <Width val="54"/>
            <Height val="54"/>
            <Texture val="@@UI/TechGlossarySmallButtonNormal" layer="0"/>
            <StateCount val="2" layer="0"/>
        </Frame>

        <Frame type="Image" name="HoverImage">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            <Width val="54"/>
            <Height val="54"/>
            <Texture val="@@UI/TechGlossarySmallButtonHover" layer="0"/>
            <StateCount val="2" layer="0"/>
        </Frame>

        <Frame type="Image" name="Icon">
            <RenderPriority val="600"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <TextureType val="Normal"/>
            <LayerColor val="##ColorMinimapButtonIcon"/>
        </Frame>
    </Frame>

    <Frame type="MinimapPanel" name="MinimapPanelTemplate">
        <Width val="468"/>
        <Height val="438"/>
        <Batch val="false"/>

        <Frame type="MinimapPanelTooltip" name="MinimapPanelTooltip" template="StandardTooltip/MinimapPanelTooltipTemplate">
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="-250"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="-500"/>
            <Width val="280"/>
            <MaxWidth val="315"/>
            <MinWidth val="80"/>
        </Frame>

        <Frame type="Minimap" name="Minimap">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Width val="438"/>
            <Height val="438"/>
            <TooltipFrame val="MinimapPanelTooltip"/>
            <RenderBorder val="false"/>
            <RenderBackground val="false"/>
            <ScaleAlphaToTerrain val="true"/>
            <HitTestPrecision val="128"/>
            <HitTestRequireValidTarget val="true"/>
            <AllowDisableMinimapSmartCommand val="true"/>
            <TextureIconAlpha val="255"/>
            <QuadIconAlpha val="180"/>
            <ColorStyle val="Primary"/>

            <Frame type="Image" name="HoverImage">
                <Anchor relative="$parent"/>
            </Frame>

            <Frame type="MinimapUnitStatusPanel" name="MinimapUnitStatusPanel">
                <Anchor relative="$parent"/>
            </Frame>

            <Frame type="Model" name="PingFrame">
                <Anchor relative="$parent"/>
                <Camera position="0.000000,0.000000,10.000000" target="0.000000,0.000000,0.000000" fov="90.000000" minz="1.000000" maxz="1000.000000"/>
                <Projection val="Orthographic"/>
                <UseShadows val="false"/>
                <UseStandardCoordinates val="true"/>
                <ClipCameraToViewport val="false"/>
            </Frame>

            <Frame type="Image" name="ViewFrustumImage">
                <Texture val="@UI/HUD_BG_MiniMap_Viewfinder"/>
                <TextureType val="Nineslice"/>
            </Frame>
        </Frame>

        <Frame type="Button" name="PingButton">
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="-105"/>
            <Width val="52"/>
            <Height val="52"/>
            <Unclipped val="True"/>
            <HitTestFrame val="HitTestFrame"/>
            <NormalImage val="NormalImage"/>
            <HoverImage val="HoverImage"/>
            <ClickSound val="@UI_Game_Click"/>
            <SimulateSounds val="false"/>
            <DisplayType val="ImageLayer"/>
            <Style val="BottomBarButton"/>

            <Frame type="Image" name="NormalImage">
                <Anchor relative="$parent"/>
                <LayerCount val="1"/>
                <Texture val="@UI/HUD_BTN_Ping_Normal" layer="0"/>
                <StateCount val="1"/>
                <TextureType val="Normal"/>
            </Frame>

            <Frame type="Image" name="HoverImage">
                <Anchor relative="$parent"/>
                <LayerCount val="1"/>
                <Texture val="@UI/HUD_BTN_Ping_Hover" layer="0"/>
                <StateCount val="1"/>
                <TextureType val="Normal"/>
            </Frame>
            
            <Frame type="Label" name="Label">
                <Anchor side="Top" relative="$parent" pos="Min" offset="5"/>
                <Anchor side="Bottom" relative="$parent" pos="Max" offset="-5"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="30"/>
                <Anchor side="Right" relative="$parent" pos="Max" offset="-50"/>
                <Text val="@UI/PingButton"/>
            </Frame>

            <Frame type="Frame" name="HitTestFrame">
                <Anchor side="Top" relative="$parent" pos="Min" offset="3"/>
                <Anchor side="Bottom" relative="$parent" pos="Max" offset="-3"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                <DescFlags val="Internal"/>
            </Frame>
        </Frame>

        <Frame type="Button" name="TerrainButton" template="MinimapPanel/MinimapButtonTemplate">
            <Anchor side="Right" relative="$parent" pos="Max" offset="200"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="5000"/>
            <Alpha val="0"/>
            <!-- UNUSED - remove from code then Layout -->
        </Frame>

        <Frame type="Button" name="ColorButton" template="MinimapPanel/MinimapButtonTemplate">
            <Anchor side="Right" relative="$parent" pos="Max" offset="200"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="5000"/>
            <Alpha val="0"/>
            <!-- UNUSED - remove from code then Layout -->
        </Frame>

        <Frame type="Image" name="ClearSelectionBackground">
            <Anchor side="Top" relative="$parent/ColorButton" pos="Max" offset="5000"/>
            <Anchor side="Left" relative="$parent/ColorButton" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent/ColorButton" pos="Mid" offset="0"/>
            <Alpha val="0"/>
            <!-- UNUSED - remove from code then Layout -->
        </Frame>

        <Frame type="Button" name="ClearSelectionButton" template="MinimapPanel/MinimapButtonTemplate">
            <Anchor side="Left" relative="$parent/ClearSelectionBackground" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent/ClearSelectionBackground" pos="Mid" offset="0"/>
            <Anchor side="Top" relative="$parent/ClearSelectionBackground" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/ClearSelectionBackground" pos="Mid" offset="0"/>
            <Alpha val="0"/>
            <!-- UNUSED - remove from code then Layout -->
        </Frame>
    </Frame>
</Desc>
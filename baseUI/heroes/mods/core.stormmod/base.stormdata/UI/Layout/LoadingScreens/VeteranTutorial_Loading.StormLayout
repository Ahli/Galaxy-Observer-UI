<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>

	<Constant name="EdgeOffset" val="200"/>

	<!--
		Template for extra info frames
	-->
	<Frame type="Frame" name="InfoFrameTemplate">
		<Height val="150"/>
		<Width val="900"/>

		<Frame type="Image" name="BulletImage">
			<Anchor side="Top" relative="$parent" pos="Min" offset="25"/>
			<Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
			<Texture val="@UI/LoadingScreen_Bullet"/>
		</Frame>

		<Frame type="Label" name="InfoTitleLabel">
			<Anchor side="Top" relative="$parent/BulletImage" pos="Min" offset="-5"/>
			<Anchor side="Left" relative="$parent/BulletImage" pos="Max" offset="10"/>
			<Style val="Storm_VeteranTutorial_Loading_InfoHeader"/>
		</Frame>

		<Frame type="Label" name="InfoDescriptionLabel">
			<Anchor side="Top" relative="$parent/InfoTitleLabel" pos="Max" offset="0"/>
			<Anchor side="Left" relative="$parent/InfoTitleLabel" pos="Min" offset="0"/>
			<Style val="Storm_VeteranTutorial_Loading_Info"/>
			<Width val="670"/>
		</Frame>
	</Frame>

	<!-- 
		Main lading screen frame
	-->
	<Frame type="Frame" name="ScreenMapLoading_VeteranTutorial">
		<Anchor relative="$parent"/>

		<Frame type="Image" name="BackgroundImage">
			<Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            <ScaleWidthToTexture val="true"/>
            <TextureType val="Normal"/>
			<Texture val="@UI/LoadingScreen_VeteranTutorial"/>
		</Frame>

		<!--
			Frame for Map title and description
		-->
		<Frame type="Frame" name="TitleFrame">
			<Anchor side="Top" relative="$parent" pos="Min" offset="100"/>
			<Anchor side="Left" relative="$parent" pos="Min" offset="#EdgeOffset"/>
			<Height val="200"/>
			<Width val="1000"/>

			<Frame type="Label" name="WelcomeLabel">
				<Anchor side="Top" relative="$parent" pos="Min" offset="10"/>
				<Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
				<Style val="Storm_VeteranTutorial_Loading_SubHeader"/>
				<Text val="@UI/MapLoadingScreen/VeteranTutorialWelcome"/>
			</Frame>

			<Frame type="Label" name="TitleLabel">
				<Anchor side="Top" relative="$parent/WelcomeLabel" pos="Max" offset="-15"/>
				<Anchor side="Left" relative="$parent/WelcomeLabel" pos="Min" offset="0"/>
				<Style val="Storm_VeteranTutorial_Loading_Header"/>
				<Text val="@UI/MapLoadingScreen/VeteranTutorialTitle"/>
			</Frame>

			<Frame type="Label" name="SubTitleLabel">
				<Anchor side="Top" relative="$parent/TitleLabel" pos="Max" offset="-10"/>
				<Anchor side="Left" relative="$parent/TitleLabel" pos="Min" offset="0"/>
				<Style val="Storm_VeteranTutorial_Loading_Info"/>
				<Text val="@UI/MapLoadingScreen/VeteranTutorialDescription"/>
			</Frame>
		</Frame>

		<!--
			Frames for extra info labels 
		-->
		<Frame type="Frame" name="InfoFrame1" template="VeteranTutorial_Loading/InfoFrameTemplate">
			<Anchor side="Top" relative="$parent" pos="Min" offset="350"/>
			<Anchor side="Left" relative="$parent/TitleFrame" pos="Min" offset="0"/>

			<Frame type="Label" name="InfoTitleLabel">
				<Text val="@UI/MapLoadingScreen/VeteranTutorialInfo1Title"/>
			</Frame>

			<Frame type="Label" name="InfoDescriptionLabel">
				<Text val="@UI/MapLoadingScreen/VeteranTutorialInfo1Description"/>
			</Frame>
		</Frame>

		<Frame type="Frame" name="InfoFrame2" template="VeteranTutorial_Loading/InfoFrameTemplate">
			<Anchor side="Top" relative="$parent/InfoFrame1" pos="Max" offset="-20"/>
			<Anchor side="Left" relative="$parent/InfoFrame1" pos="Min" offset="0"/>

			<Frame type="Label" name="InfoTitleLabel">
				<Text val="@UI/MapLoadingScreen/VeteranTutorialInfo2Title"/>
			</Frame>

			<Frame type="Label" name="InfoDescriptionLabel">
				<Text val="@UI/MapLoadingScreen/VeteranTutorialInfo2Description"/>
			</Frame>
		</Frame>

		<Frame type="Frame" name="InfoFrame3" template="VeteranTutorial_Loading/InfoFrameTemplate">
			<Anchor side="Top" relative="$parent/InfoFrame2" pos="Max" offset="-10"/>
			<Anchor side="Left" relative="$parent/InfoFrame2" pos="Min" offset="0"/>

			<Frame type="Label" name="InfoTitleLabel">
				<Text val="@UI/MapLoadingScreen/VeteranTutorialInfo3Title"/>
			</Frame>

			<Frame type="Label" name="InfoDescriptionLabel">
				<Text val="@UI/MapLoadingScreen/VeteranTutorialInfo3Description"/>
			</Frame>
		</Frame>
        
        <!-- Help tip label -->
        <Frame type="Label" name="LoadingHelpLabel" template="LoadingShared/LoadingHelpLabelTemplate">    
            <Anchor side="Bottom" pos="Min" relative="$ancestor[@type=ScreenLoading]/LoadingBar" offset="-12"/>                         
        </Frame>          
	</Frame>
</Desc>
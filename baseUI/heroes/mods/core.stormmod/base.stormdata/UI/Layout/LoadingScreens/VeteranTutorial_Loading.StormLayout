<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>

	<Constant name="EdgeOffset" val="200"/>
    <Constant name="MapObjectiveOverlayColor" val="691f82"/>

	<!-- 
		Main lading screen frame
	-->
	<Frame type="Frame" name="ScreenMapLoading_VeteranTutorial" template="LoadingShared/LoadingTemplate">
		<Anchor relative="$parent"/>

        <Frame type="Label" name="MapLabel_Subtitle">
            <Text val="@UI/MapLoadingScreen/VeteranTutorialWelcome"/>
        </Frame>

        <Frame type="Label" name="MapLabel_Title">
            <Text val="@UI/MapLoadingScreen/VeteranTutorialTitle"/>
        </Frame>

		<Frame type="Image" name="BackgroundImage">
			<Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            <ScaleWidthToTexture val="true"/>
            <TextureType val="Normal"/>
			<Texture val="@UI/LoadingScreen_VeteranTutorial"/>
		</Frame>

        <!--=======================================================================================
        <! MAP MECHANICS 1
        <!======================================================================================-->
        <Frame type="Frame" name="MapObjective1">
            <Frame type="Image" name="BucketFrame">
                <AdjustmentColor val="#MapObjectiveOverlayColor"/>
            </Frame>

            <Frame type="Image" name="Icon">
                <Anchor side="Top" relative="$parent/IconAnchorFrame" pos="Mid" offset="30"/>
                <Anchor side="Bottom" relative="$parent/IconAnchorFrame" pos="Mid" offset="-10"/>
                <Anchor side="Left" relative="$parent/IconAnchorFrame" pos="Mid" offset="5"/>
                <Anchor side="Right" relative="$parent/IconAnchorFrame" pos="Mid" offset="5"/>
                <Texture val="Assets\Textures\ui_ingame_mapmechanic_loadscreen_hauntedmines_icon1.dds"/>
                <ScaleWidthToTexture val="true"/>
                <Height val="235"/>
            </Frame>

            <Frame type="Label" name="ObjectiveTitle">
                <Text val="@UI/MapLoadingScreen/VeteranTutorialInfo1Title"/>
                <Style val="Storm_MapLoading_SectionTitleText_Purple"/>
            </Frame>

            <Frame type="Label" name="ObjectiveDescription">
                <Text val="@UI/MapLoadingScreen/VeteranTutorialInfo1Description"/>
                <Style val="Storm_MapLoading_SectionText_Purple"/>
            </Frame>
        </Frame>

        <!--=======================================================================================
        <! MAP MECHANICS 2
        <!======================================================================================-->
        <Frame type="Frame" name="MapObjective2">
            <Frame type="Image" name="BucketFrame">
                <AdjustmentColor val="#MapObjectiveOverlayColor"/>
            </Frame>

            <Frame type="Image" name="Icon">
                <Anchor side="Top" relative="$parent/IconAnchorFrame" pos="Mid" offset="0"/>
                <Anchor side="Bottom" relative="$parent/IconAnchorFrame" pos="Mid" offset="0"/>
                <Anchor side="Left" relative="$parent/IconAnchorFrame" pos="Mid" offset="0"/>
                <Anchor side="Right" relative="$parent/IconAnchorFrame" pos="Mid" offset="0"/>
                <Texture val="Assets/Textures/ui_ingame_mapmechanic_loadscreen_tutorial_icon1.dds"/>
                <BlendMode val="Add"/>
                <ScaleWidthToTexture val="true"/>
                <Height val="146"/>
            </Frame>

            <Frame type="Label" name="ObjectiveTitle">
                <Text val="@UI/MapLoadingScreen/VeteranTutorialInfo2Title"/>
                <Style val="Storm_MapLoading_SectionTitleText_Purple"/>
            </Frame>

            <Frame type="Label" name="ObjectiveDescription">
                <Text val="@UI/MapLoadingScreen/VeteranTutorialInfo2Description"/>
                <Style val="Storm_MapLoading_SectionText_Purple"/>
            </Frame>
        </Frame>

        <!--=======================================================================================
        <! MAP MECHANICS 3
        <!======================================================================================-->
        <Frame type="Frame" name="MapObjective3">
            <Frame type="Image" name="BucketFrame">
                <AdjustmentColor val="#MapObjectiveOverlayColor"/>
            </Frame>

            <Frame type="Image" name="Icon">
               <Anchor side="Top" relative="$parent/IconAnchorFrame" pos="Mid" offset="-40"/>
                <Anchor side="Bottom" relative="$parent/IconAnchorFrame" pos="Mid" offset="-10"/>
                <Anchor side="Left" relative="$parent/IconAnchorFrame" pos="Mid" offset="-5"/>
                <Anchor side="Right" relative="$parent/IconAnchorFrame" pos="Mid" offset="-5"/>
                <Texture val="Assets\Textures\ui_ingame_mapmechanic_loadscreen_shrines_icon1.dds"/>
                <ScaleWidthToTexture val="true"/>
                <Height val="200"/>
            </Frame>

            <Frame type="Label" name="ObjectiveTitle">
                <Text val="@UI/MapLoadingScreen/VeteranTutorialInfo3Title"/>
                <Style val="Storm_MapLoading_SectionTitleText_Purple"/>
            </Frame>

            <Frame type="Label" name="ObjectiveDescription">
                <Text val="@UI/MapLoadingScreen/VeteranTutorialInfo3Description"/>
                <Style val="Storm_MapLoading_SectionText_Purple"/>
            </Frame>
        </Frame> 
	</Frame>
</Desc>
<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <Frame type="HeroContainerFrame" name="ClassicEventFrameTemplate" template="HomeShared/EventContentFrameTemplate">
        <Frame type="Image" name="BackgroundImage">
            <Texture val="@UI/Storm_UI_HomeScreenBackground_ClassicEvent"/>
        </Frame>

        <Frame type="Frame" name="EventDescriptionContainerFrame">
            <Frame type="Label" name="PrimaryDescription">
                <Text val="@UI/ScreenHome/ClassicEvent/PrimaryDescription"/>
            </Frame>

            <Frame type="Label" name="SecondaryDescription">
                <Text val="@UI/ScreenHome/ClassicEvent/SecondaryDescription"/>
            </Frame>
        </Frame>

        <Animation name="ChangeHomeScreenHero">
            <Event event="ClassicEvent" action="Restart,Play" frame="$parent"/>
        </Animation>
    </Frame>
</Desc>
<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>

    <!--=======================================================================================
    <! Templates
    <!======================================================================================-->

    <!-- Skin Tile List Item Template -->
    <Frame type="GameContentTileListItem" name="HeroSelectLoadoutSkinTileListItemTemplate" template="HeroSelectLoadoutTemplates/LargeLoadoutTileListItemTemplate">

        <Frame type="Image" name="QualityFrameImage">
            <Anchor side="Top" relative="$parent/NormalImage" pos="Min" offset="16"/>
            <Anchor side="Left" relative="$parent/NormalImage" pos="Min" offset="15"/>
            <Anchor side="Bottom" relative="$parent/NormalImage" pos="Max" offset="-16"/>
            <Anchor side="Right" relative="$parent/NormalImage" pos="Max" offset="-15"/>
            <RenderPriority val="515"/>
            <Texture val="@UI/Storm_UI_StoreHero_QualityFrame_Normal"/>
            <DesaturateOnDisable val="false"/>
            <TextureType val="NineSlice"/>
            <Visible val="False"/>

            <StateGroup name="Rarity">
                <State name="Unknown">
                    <When type="Property" frame="RarityLabel" Text=""/>
                    <When type="Property" frame="$parent/EmptyImage" Visible="false"/>
                    <Action type="SetProperty" Visible="true"/>
                    <Action type="SetProperty" Texture="@UI/Storm_UI_StoreHero_QualityFrame_Normal"/>
                </State>
                <State name="Normal">
                    <When type="Property" frame="RarityLabel" Text="Normal"/>
                    <When type="Property" frame="$parent/EmptyImage" Visible="false"/>
                    <Action type="SetProperty" Visible="true"/>
                    <Action type="SetProperty" Texture="@UI/Storm_UI_StoreHero_QualityFrame_Normal"/>
                </State>
                <State name="Epic">
                    <When type="Property" frame="RarityLabel" Text="Epic"/>
                    <When type="Property" frame="$parent/EmptyImage" Visible="false"/>
                    <Action type="SetProperty" Visible="true"/>
                    <Action type="SetProperty" Texture="@UI/Storm_UI_StoreHero_QualityFrame_Epic"/>
                </State>
                <State name="Legendary">
                    <When type="Property" frame="RarityLabel" Text="Legendary"/>
                    <When type="Property" frame="$parent/EmptyImage" Visible="false"/>
                    <Action type="SetProperty" Visible="true"/>
                    <Action type="SetProperty" Texture="@UI/Storm_UI_StoreHero_QualityFrame_Legendary"/>
                </State>
                <State name="Master">
                    <When type="Property" frame="RarityLabel" Text="Master"/>
                    <When type="Property" frame="$parent/EmptyImage" Visible="false"/>
                    <Action type="SetProperty" Visible="true"/>
                    <Action type="SetProperty" Texture="@UI/Storm_UI_StoreHero_QualityFrame_Master"/>
                </State>
            </StateGroup>

            <Frame type="Label" name="RarityLabel">
                <Anchor relative="$parent"/>
                <Visible val="False"/>
                <Text val="{$parent/$parent/GameContentFrame/@SkinLink[Rarity]}"/>
            </Frame>
        </Frame>

        <Frame type="HeroCutsceneFrame" name="PortraitCutscene">
            <HeroCutsceneType val="HeroSkinTile"/>
        </Frame>
    </Frame>

    <!-- Skin Tile List Template -->
    <Frame type="LoadoutTileList" name="HeroSelectLoadoutSkinsPanelTileListTemplate" template="HeroSelectLoadoutTemplates/LargeLoadoutTileListTemplate">
        <GameContentType index="0" val="Skin"/>
        <GameContentType index="1" val="Hero"/> <!-- Adds base skin -->
        <SortMethod index="0" val="ContentType"/> <!-- Sorts base skin to front -->
        <SortMethod index="1" val="FilterString"/>
        <SortMethod index="2" val="Default"/>
        <SortMethod index="3" val="Allowed"/>
        <SortMethod index="4" val="Alphabetical"/>
        <ParentHeroFilter val="{$ancestor[@type=HeroSelectLoadoutsPanel]/@Hero}"/>
    </Frame>

    <!--=======================================================================================
    <! Main Template
    <!======================================================================================-->
    <!-- Template for the Skins section of the loadout panel -->
    <Frame type="Frame" name="LoadoutSkinsPanelTemplate" template="HeroSelectLoadoutTemplates/HeroSelectLoadoutItemPanelTemplate">

        <Frame type="CollectionCategoryTileList" name="CategoryTileList">
            <Visible val="false"/>
        </Frame>

        <Frame type="LoadoutTileList" name="ContentTileList" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinsPanelTileListTemplate">
            <CollectionCategoryFilter val=""/>
            <ParentHeroFilter val="{$ancestor[@type=HeroSelectLoadoutsPanel]/@HeroLink}"/>

            <Frame type="GameContentTileListItem" name="Item0" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
            <Frame type="GameContentTileListItem" name="Item1" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
            <Frame type="GameContentTileListItem" name="Item2" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
            <Frame type="GameContentTileListItem" name="Item3" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
            <Frame type="GameContentTileListItem" name="Item4" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
            <Frame type="GameContentTileListItem" name="Item5" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
            <Frame type="GameContentTileListItem" name="Item6" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
            <Frame type="GameContentTileListItem" name="Item7" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
            <Frame type="GameContentTileListItem" name="Item8" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
            <Frame type="GameContentTileListItem" name="Item9" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
            <Frame type="GameContentTileListItem" name="Item10" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
            <Frame type="GameContentTileListItem" name="Item11" template="HeroSelectLoadoutSkinsPanel/HeroSelectLoadoutSkinTileListItemTemplate"/>
        </Frame>
    </Frame>
</Desc>
<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <DescFlags val="Locked"/>

    <!--===============================================================================================
    <! Main Frame
    <!==============================================================================================-->
    <Frame type="Frame" name="MountCollectionPanelTemplate" template="CollectionTemplates/GameContentCollectionPanelTemplate">
        <Frame type="Frame" name="BigSectionHeader" template="CollectionTemplates/SectionHeaderTemplate">
            <Frame type="Image" name="TitleIcon">
                <Texture val="@UI/Storm_UI_Store_TitleIcon_Mounts"/>
            </Frame>
            <Frame type="Label" name="TitleLabel">
                <Text val="@UI/ScreenStore/SmallSectionTitle/Mounts"/>
            </Frame>
        </Frame>

        <Frame type="EditBox" name="SearchEditBox" template="CollectionTemplates/SearchEditBoxTemplate">
            <Frame type="Label" name="SearchTextLabel">
                <Text val="@UI/ScreenStore/SearchEditBox/Mounts"/>
            </Frame>
        </Frame>

        <Frame type="CollectionCategoryTileList" name="CategoryTileList" template="CollectionTemplates/NoImageCategoryTileListTemplate">
            <Handle val="ScreenCollection_Mount_CategoryTileList"/>
            <GameContentType val="Mount"/>

            <Frame type="Button" name="FeaturedItem" template="StoreTemplates/FeaturedCategoryTemplate">
                <Frame type="Label" name="FeaturedLabel">
                    <Text val="@UI/Collection/Featured/Mounts"/>
                </Frame>
            </Frame>
        </Frame>

        <Frame type="GameContentTileList" name="BigTileList" template="CollectionTemplates/BigTileListTemplate">
            <Handle val="ScreenCollection_Mount_BigTileList"/>
            <GameContentType val="Mount"/>
            <DebugInclude val="debugStoreFeaturedProduct"/>
        </Frame>

        <Frame type="GameContentTileList" name="ContentTileList" template="CollectionTemplates/ContentTileListTemplate">
            <Handle val="ScreenCollection_Mount_ContentTileList"/>
            <GameContentType val="Mount"/>

            <ProductAttribute index="0" val="shop-mount-featured"/>
        </Frame>
    </Frame>
</Desc>

<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <DescFlags val="Locked"/>

    <Frame type="PopupPanel" name="QuestPopupPanelTemplate" template="StandardTemplates/PopupPanelTemplate">
        <!-- QuestPopupPanel's bottom and right anchors are set outside -->
        <!-- Expand Left and Top to draw background image -->
        <Frame type="Image" name="HideTheBleedThrough">
            <Anchor relative="$parent/BlurFrame" offset="0"/>
            <RenderPriority val="500"/>
            <Color val="161641"/>
            <Alpha val="100"/>
            <Texture val="@UI/Storm_UI_NewUser_Uther_Background"/>
            <Visible val="True"/>
        </Frame>
        
        <Frame type="BlurFrame" name="BlurFrame">
            <Anchor side="Top" relative="$parent/QuestLogPanel" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent/QuestLogPanel" pos="Min" offset="0"/>
            <Anchor side="Bottom" relative="$parent/QuestLogPanel" pos="Max" offset="0"/>
            <Anchor side="Right" relative="$parent/QuestLogPanel" pos="Max" offset="0"/>
        </Frame>

        <!-- QuestLogPanel has width/height set to display the content inside. -->
        <!-- Position it with some padding on the right/bottom side for background image. -->
        <Frame type="QuestLogPanel" name="QuestLogPanel" template="QuestLogPanel/QuestLogPanelTemplate">
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="-55"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
        </Frame>
        
        <Animation name="Shine">
            <Event event="Show" action="Reset"/>
            <Event event="Show" action="Play"/>
            <Controller type="Event" end="Stop">
                <Key type="Event" time="0" event="Shine"/>
            </Controller>
        </Animation>
    </Frame>
</Desc>

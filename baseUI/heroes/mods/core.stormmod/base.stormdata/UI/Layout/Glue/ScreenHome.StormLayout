<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <DescFlags val="Locked"/>

    <Frame type="ScreenHome" name="ScreenHome" template="StandardTemplates/GlueScreen">
        <Anchor relative="$parent"/>
        <AutoCycleContent val="true"/>
        <AutoShowContent val="true"/>
        <ContentCycleDelay val="30000"/>

        <Animation name="Transition">
            <Event event="Show" action="Reset,Play"/>
            <Event event="Hide" action="DirectionReverse,Play"/>
            <Controller type="Fade" end="Pause">
                <Key type="Curve" time="0.0" value="0" out="Slow"/>
                <Key type="Curve" time="0.4" value="255" in="Slow" out="Slow"/>
            </Controller>
        </Animation>

        <Animation name="PreTransition">
            <Event event="Begin" action="Reset"/>
            <Event event="Begin" action="Play"/>

            <Controller type="Sound" end="Pause">
                <Key type="Sound" time="0.0" sound="@UI_Gluescreen_Transition_Home"/>
            </Controller>
        </Animation>

        <Frame type="Image" name="GenericBackground">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            <ScaleWidthToTexture val="true"/>
            <Texture val="@UI/Storm_background_generic"/>
            <Visible val="false"/>
        </Frame>

        <Frame type="HeroHomeInfoPanel" name="HeroHomeInfoPanel">
            <Anchor relative="$parent"/>
            <Alpha val="0"/>

            <Animation name="ShowContent">
                <Event event="ShowContent" action="DirectionForward, Play" frame="$parent"/>
                <Event event="HideContent" action="DirectionReverse, Play" frame="$parent"/>

                <Controller type="Visibility" end="Pause">
                    <Key type="Bool" time="0.00" value="true"/>
                    <Key type="Bool" time="0.99" value="true"/>
                    <Key type="Bool" time="1" value="false"/>
                </Controller>
            </Animation>
            
            <Animation name="DataFade">
                <Event event="DataReceived" action="Play" frame="$parent"/>

                <Controller type="Visibility" end="Pause">
                    <Key type="Bool" time="0.0" value="false"/>
                    <Key type="Bool" time="0.5" value="true"/>
                    <Key type="Bool" time="1" value="true"/>
                </Controller>

                <Controller type="Fade" end="Pause">
                    <Key type="Curve" time="0.0" value="0"/>
                    <Key type="Curve" time="0.5" value="0"/>
                    <Key type="Curve" time="0.9" value="255"/>
                </Controller>
            </Animation>
            
            <Frame type="HeroContainerFrame" name="PTRFrame" template="HomePTR/PTRFrameTemplate">
                <Animation name="ChangeHomeScreenHero">
                    <Event event="ResetHero" action="Stop" frame="$parent"/>
                    <Event event="PTR" action="Restart" frame="$parent"/>
                    <Event event="PTR" action="Play" frame="$parent"/>
                    <Controller type="Visibility" end="Pause">
                        <Key type="Bool" time="0.00" value="false"/>
                        <Key type="Bool" time="0.01" value="true"/>
                    </Controller>
                </Animation>
            </Frame>
            
            <Frame type="HeroContainerFrame" name="ChromieFrame" template="Home18/ChromieFrameTemplate">
                <Animation name="ChangeHomeScreenHero">
                    <Event event="ResetHero" action="Stop" frame="$parent"/>
                    <Event event="Chromie" action="Restart,Play" frame="$parent"/>
                    <Controller type="Visibility" end="Pause">
                        <Key type="Bool" time="0" value="false"/>
                        <Key type="Bool" time=".01" value="true"/>
                    </Controller>
                </Animation>
                <Visible val="False"/>
            </Frame>
            
            <Frame type="HeroContainerFrame" name="MedivhFrame" template="Home18/MedivhFrameTemplate">
                <Animation name="ChangeHomeScreenHero">
                    <Event event="ResetHero" action="Stop" frame="$parent"/>
                    <Event event="Medivh" action="Restart,Play" frame="$parent"/>
                    <Controller type="Visibility" end="Pause">
                        <Key type="Bool" time="0" value="false"/>
                        <Key type="Bool" time=".01" value="true"/>
                    </Controller>
                </Animation>
                <Visible val="False"/>
            </Frame>
      
            <Frame type="HeroGlueButton" name="HomeDebugButton" template="StandardTemplates/StandardButtonMiniTemplate" requiredtoload="IS_SCREEN_MAIN_MENU_ENABLED">
                <Anchor side="Bottom" relative="$parent" pos="Max" offset="-112"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="-12"/>
                <!-- <Tooltip val="Homescreen Debug"/>
                <TooltipAnchorPosition val="TopLeft"/> -->
                <Visible val="True"/>
                <Width val="90"/>
                <Height val="87"/>
                <Frame type="Label" name="TextLabel">
                    <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
                    <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
                    <Anchor side="Left" relative="$parent/ConfigImage" pos="Max" offset="0"/>
                    <Text val=""/>
                    <Style val="StandardGlueButtonSmallLeft"/>
                </Frame>
                <Frame type="Image" name="ConfigImage">
                    <Anchor side="Top" relative="$parent" pos="Mid" offset="1"/>
                    <Anchor side="Bottom" relative="$parent" pos="Mid" offset="1"/>
                    <Anchor side="Left" relative="$parent" pos="Min" offset="34"/>
                    <Texture val="@UI/Storm_Lobby_Icon_Settings"/>
                </Frame>
                <Animation name="Click">
                    <Event event="OnMouseDown" action="ToggleDirection,Play"/>
                    <Controller type="Fade" end="Pause" frame="$parent/HomeDebugContainer">
                        <Key type="Curve" time="0" value="255" in="Slow"/>
                        <Key type="Curve" time=".2" value="0" out="Slow"/>
                    </Controller>
                    <Controller type="Event" end="Pause" frame="$parent/HomeDebugContainer">
                        <Key type="Event" time="0" event="Begin"/>
                        <Key type="Event" time=".01" event="End"/>
                    </Controller>
                </Animation>
            </Frame>
        
            <Frame type="Frame" name="HomeDebugContainer">
                <Anchor side="Bottom" relative="$parent/HomeDebugButton" pos="Min" offset="20"/>
                <Anchor side="Left" relative="$parent/HomeDebugButton" pos="Min" offset="0"/>
                <Anchor side="Right" relative="TemplateButton" pos="Max" offset="0"/>
                <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                <Alpha val="0"/>
                
                <Animation name="HideTemplate">
                    <Event event="OnShown" action="DirectionForward,Play"/>
                    <Controller type="Fade" end="Pause">
                        <Key type="Curve" time="0" value="0" out="Slow"/>
                    </Controller>
                </Animation>
            
                <Frame type="Button" name="TemplateButton" template="StandardTemplates/StandardButtonMiniTemplate">
                    <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                    <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    <CollapseLayout val="True"/>
                    <Height val="70"/>
                    <Animation name="Begin">
                        <Event event="Begin" action="DirectionForward" frame="$parent"/>
                        <Event event="Begin" action="Play" frame="$parent"/>
                        <Event event="End" action="DirectionReverse" frame="$parent"/>
                        <Event event="End" action="Play" frame="$parent"/>
                        <Controller type="Anchor" end="Pause" side="Bottom" relative="true">
                            <Key type="Curve" time="0" value="100" out="Fast"/>
                            <Key type="Curve" time=".2" value="0" in="Slow"/>
                        </Controller>
                    </Animation>
                </Frame>
                
                <Frame type="Button" name="PTRButton" template="ScreenHome/ScreenHome/HeroHomeInfoPanel/HomeDebugContainer/TemplateButton">
                    <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                    <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    <Text val="PTR"/>
                    <Visible val="True"/>
                    <Animation name="Click">
                        <Event event="OnMouseDown" action="Restart"/>
                        <Event event="OnMouseDown" action="Play"/>
                        <Controller type="Event" end="Stop" frame="$parent/$parent">
                            <Key type="Event" time="0" event="HomeReset"/>
                            <Key type="Event" time="0.01" event="PTR"/>
                        </Controller>
                    </Animation>
                </Frame>
                
                <Frame type="Button" name="ChromieButton" template="ScreenHome/ScreenHome/HeroHomeInfoPanel/HomeDebugContainer/TemplateButton">
                    <Anchor side="Bottom" relative="$parent/PTRButton" pos="Min" offset="40"/>
                    <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    <Text val="Chromie"/>
                    <Animation name="Click">
                        <Event event="OnMouseDown" action="Restart,Play"/>
                        <Controller type="Event" end="Stop" frame="$parent/$parent">
                            <Key type="Event" time="0" event="HomeReset"/>
                            <Key type="Event" time="0.01" event="Chromie"/>
                        </Controller>
                    </Animation>
                </Frame>
                
                <Frame type="Button" name="MedivhButton" template="ScreenHome/ScreenHome/HeroHomeInfoPanel/HomeDebugContainer/TemplateButton">
                    <Anchor side="Bottom" relative="$parent/ChromieButton" pos="Min" offset="40"/>
                    <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    <Text val="Medivh"/>
                    <Animation name="Click">
                        <Event event="OnMouseDown" action="Restart,Play"/>
                        <Controller type="Event" end="Stop" frame="$parent/$parent">
                            <Key type="Event" time="0" event="HomeReset"/>
                            <Key type="Event" time="0.01" event="Medivh"/>
                        </Controller>
                    </Animation>
                </Frame>                
           </Frame>
        </Frame>

        <Frame type="ContentFeedPanel" name="TakeoverContentFeed" template="ContentFeedPanel/ContentFeedPanelTemplate">
            <Anchor relative="$parent"/>
            <UseCached val="True"/>
            <KeepDataOnHide val="True"/>
            <UseAdCampaign val="true"/>
            <NydusLink val="feed/ad"/>
            <!-- For Testing Purposes: -->
            <!-- <FeedURL val="https://cms-us.web.blizzard.net/system/cms/oauth/api/ad/list?locale=enUS&amp;community=Heroes_client&amp;mediaCategory=IN_GAME_AD"/> -->

            <Frame type="PageSelectorButtonList" name="PageSelector">
                <AllowAutoPageWrap val="True"/>
                <AutoIncrement val="False"/>
            </Frame>

            <Frame type="Button" name="BackToHeroInfoButton" template="StandardTemplates/StandardLongArrowButtonTemplate_Left">
                <Visible val="False"/>
                <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                <Shortcut val="@UI/ScreenNavigationLeft_Hotkey"/>
            </Frame>

            <Frame type="Frame" name="ContentFeedPage">
                <Frame type="Button" name="LinkButton" >
                    <ReportsStats val="true"/>
                    <Handle val="HomeTakeover_LinkButton"/>
                </Frame>

                <Frame type="BlurFrame" name="BlurBackground">
                    <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                    <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                    <Height val="80"/>
                    <BlurAmount val="0.8"/>

                    <Frame type="Image" name="LowImage">
                        <Anchor relative="$parent"/>
                        <Texture val="@UI/StormTempBlack"/>
                        <TextureType val="Nineslice"/>
                    </Frame>
                </Frame>
            </Frame>
            
            <Animation name="ShowContent">
                <Event event="ShowContent" action="DirectionForward, Play" frame="$parent"/>
                <Event event="HideContent" action="DirectionReverse, Play" frame="$parent"/>
                <Controller type="Fade" end="Pause">
                    <Key type="Curve" time="0.0" value="0" out="Auto"/>
                    <Key type="Curve" time="0.5" value="255" out="Auto"/>
                </Controller>
                <Controller type="Visibility" end="Pause">
                    <Key type="Bool" time="0.00" value="false"/>
                    <Key type="Bool" time="0.01" value="true"/>
                    <Key type="Bool" time="0.50" value="true"/>
                </Controller>
            </Animation>
        </Frame>

        <Frame type="Frame" name="IGRBenefitsPanel" template="IGRBenefitsPanel/IGRBenefitsPanelTemplate">
            <Anchor side="Top" relative="$parent" pos="Min" offset="230"/>
            <Anchor side="Left" relative="$parent/LookingForPartyPanel" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent/LookingForPartyPanel" pos="Max" offset="0"/>
            <CollapseLayout val="true"/>
            <PreserveAnchorOffset val="True"/>
        </Frame>

        <Frame type="LookingForPartyPanel" name="LookingForPartyPanel" template="LookingForPartyPanel/LookingForPartyPanelTemplate">
            <Handle val="ScreenHome_LookingForPartyPanel"/>
            <Anchor side="Top" relative="$parent/IGRBenefitsPanel" pos="Max" offset="300"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="-15"/>
            <PreserveAnchorOffset val="True"/>
        </Frame>
        
        <Frame type="Button" name="ShowTakeoverContentButton" template="StandardTemplates/StandardLongArrowButtonTemplate_Right">
            <Visible val="False"/>
            <Alpha val="0"/>
            <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Shortcut val="@UI/ScreenNavigationRight_Hotkey"/>

            <Animation name="ToggleButton">
                <Event event="HideContent" action="DirectionForward, Play" frame="$parent"/>
                <Event event="ShowContent" action="DirectionReverse, Play" frame="$parent"/>
                
                <Controller type="Fade" end="Pause">
                    <Key type="Curve" time="0.0" value="0" out="Auto"/>
                    <Key type="Curve" time="0.5" value="255" out="Auto"/>
                </Controller>
            </Animation>
        </Frame>
    </Frame>
</Desc>

<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>

    <Constant name="TeamAllyBackingColor" val="0048eb"/>
    <Constant name="TeamEnemyBackingColor" val="eb0011"/>
    
    <!--**************************************************************-->
    <!-- Top Count Label                                              -->
    <!--**************************************************************-->
    <Frame type="Frame" name="ArenaGardenScorePanel">
        <Anchor relative="$parent"/>
        
        <Frame type="Image" name="Team1LevelColorBacking">
            <Anchor relative="$ancestor[@name=PartyFramePanel]/Team1LevelInfo/TeamLevelColorBacking"/>
            <Texture val="@UI/HUD_TopBar_TeamXP_ColorBacking"/>
            <BlendMode val="Add"/>
        </Frame>

        <Frame type="Image" name="Team2LevelColorBacking">
            <Anchor relative="$ancestor[@name=PartyFramePanel]/Team2LevelInfo/TeamLevelColorBacking"/>
            <Texture val="@UI/HUD_TopBar_TeamXP_ColorBacking"/>
            <TextureCoords top="0" left="1" bottom="1" right="0"/>
            <BlendMode val="Add"/>
        </Frame>
        
        <Frame type="Image" name="VsImage">
            <Anchor side="Top" relative="$parent" pos="Min" offset="31"/>
            <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            <Texture val="@UI/Storm_UI_Brawl_HUD_Icon_Seeds"/>
        </Frame>

        <Frame type="Label" name="HelpText">
            <Anchor side="Top" relative="$parent" pos="Min" offset="90"/>
            <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            <Style val="Storm_MapMechanic_MechanicCounterCentered"/>
        </Frame>
        
        <Frame type="Label" name="Team1Score">
            <Anchor relative="$ancestor[@name=PartyFramePanel]/Team1LevelInfo/TeamLevelLabel" side="Top" pos="Min" offset="-20"/>
            <Anchor relative="$ancestor[@name=PartyFramePanel]/Team1LevelInfo/TeamLevelLabel" side="Bottom" pos="Max" offset="0"/>
            <Anchor relative="$ancestor[@name=PartyFramePanel]/Team1LevelInfo/TeamLevelLabel" side="Left" pos="Min" offset="3"/>
            <Anchor relative="$ancestor[@name=PartyFramePanel]/Team1LevelInfo/TeamLevelLabel" side="Right" pos="Max" offset="11"/>
            <Style val="PartyFrame_TeamLevel"/>
            
            <ColorAdjustMode val="Colorize"/>
            <LightAdjustColor val="#ColorWhite"/>
            <DarkAdjustColor val="{$GameUI/TeamOrderColors/@Color}"/>
        </Frame>
        
        <Frame type="Label" name="Team2Score">
            <Anchor relative="$ancestor[@name=PartyFramePanel]/Team2LevelInfo/TeamLevelLabel" side="Top" pos="Min" offset="-20"/>
            <Anchor relative="$ancestor[@name=PartyFramePanel]/Team2LevelInfo/TeamLevelLabel" side="Bottom" pos="Max" offset="0"/>
            <Anchor relative="$ancestor[@name=PartyFramePanel]/Team2LevelInfo/TeamLevelLabel" side="Left" pos="Min" offset="-8"/>
            <Anchor relative="$ancestor[@name=PartyFramePanel]/Team2LevelInfo/TeamLevelLabel" side="Right" pos="Max" offset="0"/>
            <Style val="PartyFrame_TeamLevel"/>
            
            <ColorAdjustMode val="Colorize"/>
            <LightAdjustColor val="#ColorWhite"/>
            <DarkAdjustColor val="{$GameUI/TeamChaosColors/@Color}"/>
        </Frame>

        <!-- Switching team colors for Score Labels if needed -->
        <StateGroup name="SetTeamColors">
            <State name="SetLeftAlly">
                <When type="AnimationState" frame="$ancestor[@type=GameUI]/UIContainer" TeamColors="Team1IsBlue"/>
                <Action type="SetProperty" frame="Team1LevelColorBacking" color="#TeamAllyBackingColor"/>
                <Action type="SetProperty" frame="Team2LevelColorBacking" color="#TeamEnemyBackingColor"/>
            </State>

            <State name="SetRightAlly">
                <When type="AnimationState" frame="$ancestor[@type=GameUI]/UIContainer" TeamColors="Team2IsBlue"/>
                <Action type="SetProperty" frame="Team2LevelColorBacking" color="#TeamAllyBackingColor"/>
                <Action type="SetProperty" frame="Team1LevelColorBacking" color="#TeamEnemyBackingColor"/>
            </State>
        </StateGroup>
    </Frame>
    
    <!--**************************************************************-->
    <!-- Bottom Frame, Punishers info                                 -->
    <!--**************************************************************-->
    <!-- Notification template -->
    <Frame type="Frame" name="FloraSpawnPanelTemplate">
        <Anchor side="Top" relative="$parent" pos="Min" offset="350"/>
        <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
        <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
        <Height val="150"/>
        <Visible val="False"/>
        
        <Frame type="Image" name="BackgroundImage">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="-15"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="-15"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Width val="460"/>
            <Texture val="@UI/HUD_MapMechanic_BG_CenterBar"/>
        </Frame>

        <Frame type="Image" name="Icon">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="-23"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="-23"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="-3"/>
            <Texture val="@UI/Storm_UI_MapMechanic_Notification_SCEvent_BG"/>
            
            <Frame type="Image" name="IconSeed">
                <Anchor side="Top" relative="$parent" pos="Mid" offset="-10"/>
                <Anchor side="Bottom" relative="$parent" pos="Mid" offset="-10"/>
                <Anchor side="Left" relative="$parent" pos="Mid" offset="24"/>
                <Anchor side="Right" relative="$parent" pos="Mid" offset="24"/>
                <Width val="214"/>
                <ScaleHeightToTexture val="true"/>
                <Texture val="@UI/hud_minimap_garden_Team1_Seed_Open"/>
            </Frame>
        </Frame>
        
        <Frame type="Label" name="InfoLabel">
            <Anchor side="Top" relative="$parent/BackgroundImage" pos="Min" offset="13"/>
            <Anchor side="Bottom" relative="$parent/BackgroundImage" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent/BackgroundImage" pos="Min" offset="40"/>
            <Style val="Storm_MapMechanic_MechanicTimerCentered_Blue"/>
            <Text val="--"/>
        </Frame>
        
        <!-- Slide in/out (show/hide) animation -->
        <Animation name="SlideInOut">
            <Event event="OnShown" action="Restart,Play"/>
            <Controller type="Visibility" end="Pause">
                <Key type="Bool" time="5.5" value="False"/>
            </Controller>
            <Controller type="Anchor" end="Pause" side="Right" relative="true">
                <Key type="Curve" time="0.0" value="500" out="Fast"/>
                <Key type="Curve" time="0.25" value="0" inout="Fast"/>
                <Key type="Curve" time="5.25" value="0" inout="Fast"/>
                <Key type="Curve" time="5.5" value="500" in="Fast"/>
            </Controller>
            <Controller type="Fade" end="Pause">
                <Key type="Curve" time="0.0" value="0" out="Fast"/>
                <Key type="Curve" time="0.25" value="255" inout="Fast"/>
                <Key type="Curve" time="5.25" value="255" inout="Fast"/>
                <Key type="Curve" time="5.5" value="0" in="Fast"/>
            </Controller>
            <Controller type="Anchor" end="Pause" side="Top">
                <Key type="Curve" time="0.0" value="0"/>
            </Controller>
        </Animation>
        
        <!-- Make room for another notification -->
        <Animation name="ShiftUp">
            <Controller type="Anchor" end="Pause" side="Top" relative="true">
                <Key type="Curve" time="0.0" value="0" out="Fast"/>
                <Key type="Curve" time="0.25" value="-120" in="Slow" out="Step"/>
            </Controller>
        </Animation>
    </Frame>
    
    <!-- Actual Panel -->
    <Frame type="Frame" name="ArenaGardenPanel">
        <Width val="470"/>
        <Height val="800"/>
        <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
        <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>

        <Frame type="Frame" name="TerrorSpawnPanel" template="ArenaGarden/FloraSpawnPanelTemplate">
            <Animation name="ShiftUp">
                <Event event="OnShown" action="Reset,Play" frame="$parent/ShamblersSpawnPanel"/>
            </Animation>
        </Frame>
        <Frame type="Frame" name="ShamblersSpawnPanel" template="ArenaGarden/FloraSpawnPanelTemplate">
            <Animation name="ShiftUp">
                <Event event="OnShown" action="Reset,Play" frame="$parent/TerrorSpawnPanel"/>
            </Animation>
        </Frame>
    </Frame>
    
    <!--**************************************************************-->
    <!-- Progress Notification Frame                                  -->
    <!--**************************************************************-->
    <!-- Ally or enemy label override  -->
    <Frame type="Frame" name="NotificationOverride">
        <Anchor relative="$parent"/>
        <Frame type="Image" name="NotificationBackground">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
        </Frame>
        <Frame type="Label" name="NotificationLabel_Blur">
            <Visible val="False"/>
        </Frame>
        <Frame type="Label" name="NotificationLabel">
            <Visible val="False"/>
        </Frame>
        <Frame type="Label" name="NotificationTitle_Blur">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="-60"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
            <Height val="200"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            <Width val="775"/>
        </Frame>
        <Frame type="Label" name="NotificationTitle">
            <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
            <Height val="200"/>
            <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
            <Width val="775"/>
        </Frame>
    </Frame>
    
    <!-- Notification template override -->
    <Frame type="Frame" name="ProgressAnnouncementTemplate" template="GameNotifications/InGameNotificationsTemplate">    
        <Anchor side="Top" relative="$parent/$parent/ConsoleUIContainer/TopPanel" pos="Max" offset="-20"/>
        <Frame type="Frame" name="StandardNotificationTemplate" template="ArenaGarden/NotificationOverride"/>
        <Frame type="Frame" name="StandardEnemyNotificationTemplate" template="ArenaGarden/NotificationOverride"/>
    </Frame>
    
    <!-- Actual notification panel -->
    <Frame type="Frame" name="ArenaGardenNotificationsPanel">
        <Anchor side="Top" relative="$parent" pos="Min" offset="250"/>
        <Height val="200"/>
        <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
        <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
        
        <!-- Left side announcement frame -->
        <Frame type="Frame" name="ProgressAnnouncement1" template="ArenaGarden/ProgressAnnouncementTemplate">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="0.0" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="0.6" offset="0"/>
            <!-- Ally animation override -->
            <Frame type="Frame" name="StandardNotificationTemplate">
                <Frame type="Label" name="NotificationTitle">
                    <Style val="Storm_InGame_Notification_Title_Mid"/>
                    <Animation name="ShowTitle">
                        <Controller type="Anchor" end="Pause" side="Right" relative="true">
                            <Key type="Curve" time="0.0" value="75" out="Auto"/>
                            <Key type="Curve" time="0.1" value="75" out="Auto"/>
                            <Key type="Curve" time="0.4" value="325" in="Auto" out="Linear"/>
                            <Key type="Curve" time="2.6" value="375" in="Linear" out="Auto"/>
                            <Key type="Curve" time="2.8" value="625" in="Auto"/>
                        </Controller>
                    </Animation>
                </Frame>
                <Frame type="Label" name="NotificationTitle_Blur">
                    <Animation name="ShowTitle">
                        <Controller type="Anchor" end="Pause" side="Right" relative="true">
                            <Key type="Curve" time="0.0" value="75" out="Auto"/>
                            <Key type="Curve" time="0.1" value="75" out="Auto"/>
                            <Key type="Curve" time="0.4" value="325" in="Auto" out="Linear"/>
                            <Key type="Curve" time="2.6" value="375" in="Linear" out="Auto"/>
                            <Key type="Curve" time="2.8" value="625" in="Auto"/>
                        </Controller>
                    </Animation>
                </Frame>
            </Frame>
            <!-- Enemy animation override -->
            <Frame type="Frame" name="StandardEnemyNotificationTemplate">
                <Frame type="Label" name="NotificationTitle">
                    <Style val="Storm_InGame_Notification_Title_Red_Mid"/>
                    <Text val="{$parent/$parent/StandardNotificationTemplate/NotificationTitle/@Text}"/>
                    <Animation name="ShowTitle">
                        <Controller type="Anchor" end="Pause" side="Right" relative="true">
                            <Key type="Curve" time="0.0" value="75" out="Auto"/>
                            <Key type="Curve" time="0.1" value="75" out="Auto"/>
                            <Key type="Curve" time="0.4" value="325" in="Auto" out="Linear"/>
                            <Key type="Curve" time="2.6" value="375" in="Linear" out="Auto"/>
                            <Key type="Curve" time="2.8" value="625" in="Auto"/>
                        </Controller>
                    </Animation>
                </Frame>
                <Frame type="Label" name="NotificationTitle_Blur">
                    <Animation name="ShowTitle">
                        <Controller type="Anchor" end="Pause" side="Right" relative="true">
                            <Key type="Curve" time="0.0" value="75" out="Auto"/>
                            <Key type="Curve" time="0.1" value="75" out="Auto"/>
                            <Key type="Curve" time="0.4" value="325" in="Auto" out="Linear"/>
                            <Key type="Curve" time="2.6" value="375" in="Linear" out="Auto"/>
                            <Key type="Curve" time="2.8" value="625" in="Auto"/>
                        </Controller>
                    </Animation>
                </Frame>
            </Frame>
        </Frame>
        
        <!-- Right side announcement frame -->
        <Frame type="Frame" name="ProgressAnnouncement2" template="ArenaGarden/ProgressAnnouncementTemplate">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="0.4" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="1.0" offset="0"/>
            <!-- Ally animation override -->
            <Frame type="Frame" name="StandardNotificationTemplate">
                <Frame type="Label" name="NotificationTitle">
                    <Style val="Storm_InGame_Notification_Title_Mid"/>
                    <Animation name="ShowTitle">
                        <Controller type="Anchor" end="Pause" side="Right" relative="true">
                            <Key type="Curve" time="0.0" value="775" out="Auto"/>
                            <Key type="Curve" time="0.1" value="775" out="Auto"/>
                            <Key type="Curve" time="0.4" value="525" in="Auto" out="Linear"/>
                            <Key type="Curve" time="2.6" value="475" in="Linear" out="Auto"/>
                            <Key type="Curve" time="2.8" value="225" in="Auto"/>
                        </Controller>
                    </Animation>
                </Frame>
                <Frame type="Label" name="NotificationTitle_Blur">
                    <Animation name="ShowTitle">
                        <Controller type="Anchor" end="Pause" side="Right" relative="true">
                            <Key type="Curve" time="0.0" value="775" out="Auto"/>
                            <Key type="Curve" time="0.1" value="775" out="Auto"/>
                            <Key type="Curve" time="0.4" value="525" in="Auto" out="Linear"/>
                            <Key type="Curve" time="2.6" value="475" in="Linear" out="Auto"/>
                            <Key type="Curve" time="2.8" value="225" in="Auto"/>
                        </Controller>
                    </Animation>
                </Frame>
            </Frame>
            <!-- Enemy animation override -->
            <Frame type="Frame" name="StandardEnemyNotificationTemplate">
                <Frame type="Label" name="NotificationTitle">
                    <Style val="Storm_InGame_Notification_Title_Red_Mid"/>
                    <Text val="{$parent/$parent/StandardNotificationTemplate/NotificationTitle/@Text}"/>
                    <Animation name="ShowTitle">
                        <Controller type="Anchor" end="Pause" side="Right" relative="true">
                            <Key type="Curve" time="0.0" value="775" out="Auto"/>
                            <Key type="Curve" time="0.1" value="775" out="Auto"/>
                            <Key type="Curve" time="0.4" value="525" in="Auto" out="Linear"/>
                            <Key type="Curve" time="2.6" value="475" in="Linear" out="Auto"/>
                            <Key type="Curve" time="2.8" value="225" in="Auto"/>
                        </Controller>
                    </Animation>
                </Frame>
                <Frame type="Label" name="NotificationTitle_Blur">
                    <Animation name="ShowTitle">
                        <Controller type="Anchor" end="Pause" side="Right" relative="true">
                            <Key type="Curve" time="0.0" value="775" out="Auto"/>
                            <Key type="Curve" time="0.1" value="775" out="Auto"/>
                            <Key type="Curve" time="0.4" value="525" in="Auto" out="Linear"/>
                            <Key type="Curve" time="2.6" value="475" in="Linear" out="Auto"/>
                            <Key type="Curve" time="2.8" value="225" in="Auto"/>
                        </Controller>
                    </Animation>
                </Frame>
            </Frame>
        </Frame>
    </Frame>
</Desc>
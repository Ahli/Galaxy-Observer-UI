<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>

    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrameTemplate" template="UnitStatus/TrackedUnitStatusFrameTemplate">
        <Anchor side="Bottom" relative="$sibling-5" pos="Min" offset="0"/>
        <Anchor side="Left" relative="$sibling-1" pos="Max" offset="0"/>
    </Frame>
    <Frame type="UnitStatusFrame" name="BottomRowTrackedUnitStatusFrameTemplate" template="UnitStatus/TrackedUnitStatusFrameTemplate">
        <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
        <Anchor side="Left" relative="$sibling-1" pos="Max" offset="0"/>
    </Frame>

    <!-- Stitches is an exceptional example because he can eat 15 heroes if he eats 5 sets of Lost Vikings! -->
    <Frame type="UnitStatusFrame" name="CustomStitchesUnitStatusFrame" template="UnitStatus/HeroUnitStatusFrameTemplate">

        <Frame type="Frame" name="HeroUnitStatusParentFrame">

            <Frame type="ParentCenteredFrame" name="TrackingCenteringFrame">
                <!-- Left anchor is to parent so its offset and pos are unimportant.-->
                <!-- This frame's Left will be overwritten to make the frame center.-->
                <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                <!-- This frame will horizontally center based on the width of UnitTrackingElement. -->
                <Anchor side="Right" relative="UnitTrackingElement" pos="Max" offset="0"/>
                <!-- This frame squeezes itself vertically inbetween other frames, so its height is based on children using CollapseLayout -->
                <Anchor side="Top" relative="UnitTrackingElement" pos="Min" offset="0"/>
                <!-- Currently this frame goes above TalentAvailableIndicator and below Player/Unit Name -->
                <Anchor side="Bottom" relative="$parent/TalentAvailableIndicator" pos="Min" offset="16"/>

                <Frame type="UnitStatusUnitTrackingBehavior" name="UnitTrackingElement">
                    <!-- Width and Height are determined by the number of visible TrackedUnitStatusFrames.  -->
                    <!-- Height is determined by how many rows are seen: Frames 0, 5, and 10                -->
                    <!-- Width is determined by how many columns in the first row: Frames 0, 1, 2, 3, and 4 -->
                    <Anchor side="Top" relative="TrackedUnitStatusFrame10" pos="Min" offset="0"/>
                    <Anchor side="Right" relative="TrackedUnitStatusFrame4" pos="Max" offset="0"/>
                    <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
                    <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>

                    <!-- TODO: Implement a BehaviorUnitTracker tracking the eaten heroes    -->
                    <!--       and put that behavior's name here.                           -->
                    <Behavior val="StitchesGorgeUnitTracker"/>

                    <!-- UnitStatusUnitTrackingBehavior frames hook up to a list of frames named TrackedUnitStatusFrame#    -->
                    <!-- The child frames are assigned units, from the behavior, in order with no gaps.                     -->
                    <!-- The frames are shown and hidden based on whether they have a valid unit assigned to them.          -->
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame0" template="Stitches/BottomRowTrackedUnitStatusFrameTemplate">
                        <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    </Frame>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame1" template="Stitches/BottomRowTrackedUnitStatusFrameTemplate"/>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame2" template="Stitches/BottomRowTrackedUnitStatusFrameTemplate"/>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame3" template="Stitches/BottomRowTrackedUnitStatusFrameTemplate"/>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame4" template="Stitches/BottomRowTrackedUnitStatusFrameTemplate"/>

                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame5" template="Stitches/TrackedUnitStatusFrameTemplate">
                        <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    </Frame>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame6" template="Stitches/TrackedUnitStatusFrameTemplate"/>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame7" template="Stitches/TrackedUnitStatusFrameTemplate"/>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame8" template="Stitches/TrackedUnitStatusFrameTemplate"/>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame9" template="Stitches/TrackedUnitStatusFrameTemplate"/>

                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame10" template="Stitches/TrackedUnitStatusFrameTemplate">
                        <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    </Frame>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame11" template="Stitches/TrackedUnitStatusFrameTemplate"/>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame12" template="Stitches/TrackedUnitStatusFrameTemplate"/>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame13" template="Stitches/TrackedUnitStatusFrameTemplate"/>
                    <Frame type="UnitStatusFrame" name="TrackedUnitStatusFrame14" template="Stitches/TrackedUnitStatusFrameTemplate"/>
                </Frame>
            </Frame>

            <!-- Changing the anchoring of the PlayerNameLabel assuming that UnitNameLabel is anchored to it. -->
            <Frame type="UnitStatusPlayerName" name="PlayerNameLabel">
                <Anchor side="Bottom" relative="$parent/TrackingCenteringFrame" pos="Min" offset="-2"/>
            </Frame>
        </Frame>
    </Frame>

</Desc>

<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <DescFlags val="Locked"/>
    
    <Frame type="StandardTooltip" name="StandardTooltip">
        <MaxWidth val="480"/>
        <Insets top="15" left="15" bottom="15" right="15"/>
        
        <Frame type="Image" name="BackgroundImage" template="StandardTemplates/StandardBorderTooltipGame">
            <Anchor relative="$parent"/>
        </Frame>

        <Frame type="Label" name="Label">
            <Style val="@@StandardTooltip"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="15"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="15"/>
            <Width val="450"/>
        </Frame>
    </Frame>

    <Frame type="StandardTooltip" name="StandardBattlenetTooltipTemplate">
        <MaxWidth val="480"/>
        <Insets top="15" left="15" bottom="15" right="15"/>

        <Frame type="Image" name="BackgroundImage">
            <Anchor relative="$parent"/>
            <Texture val="@UI/StandardGameTooltip" layer="0"/>
            <TextureType val="Border" layer="0"/>
            <Tiled val="false" layer="0"/>
        </Frame>

        <Frame type="Label" name="Label">
            <Style val="StoryModeTooltip"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="15"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="15"/>
            <Width val="450"/>
        </Frame>
    </Frame>

    <Frame type="StandardTooltip" name="StandardStoryModeTooltipTemplate">
        <MaxWidth val="480"/>
        <Insets top="15" left="15" bottom="15" right="15"/>
        
        <Frame type="Image" name="BackgroundImage">
            <Anchor relative="$parent"/>
            <Texture val="@@UI/StandardStoryModeTooltip" layer="0"/>
            <TextureType val="Border" layer="0"/>
            <Tiled val="false" layer="0"/>
        </Frame>

        <Frame type="Label" name="Label">
            <Style val="StoryModeTooltip"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="15"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="15"/>
            <Width val="450"/>
        </Frame>
    </Frame>

    <Frame type="StandardNameTooltip" name="StandardNameTooltipTemplate">
        <MaxWidth val="480"/>
        <Insets top="15" left="15" bottom="15" right="15"/>

        <Frame type="Image" name="BackgroundImage" template="StandardTemplates/StandardBorderTooltipGame">
            <Anchor relative="$parent"/>
        </Frame>

        <Frame type="Label" name="NameLabel">
            <Anchor side="Top" relative="$parent" pos="Min" offset="15"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="15"/>
            <Width val="450"/>
            <CollapseLayout val="true"/>
            <Style val="@@StandardTooltipHeader"/>
            <Options val="NoWrapping | ScaleToPreventTruncation"/>
        </Frame>

        <Frame type="Label" name="DescriptionLabel">
            <Anchor side="Top" relative="$parent/NameLabel" pos="Max" offset="8"/>
            <Anchor side="Left" relative="$parent/NameLabel" pos="Min" offset="0"/>
            <Width val="450"/>
            <CollapseLayout val="true"/>
            <Style val="@@StandardTooltip"/>
        </Frame>

        <Frame type="Frame" name="BottomFrame">
            <Anchor side="Top" relative="$parent/DescriptionLabel" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent/NameLabel" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent/NameLabel" pos="Max" offset="0"/>
        </Frame>

        <Frame type="Frame" name="AnchorFrame">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Bottom" relative="$parent/BottomFrame" pos="Max" offset="25"/>
            <Anchor side="Left" relative="$parent/NameLabel" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent/NameLabel" pos="Max" offset="0"/>
        </Frame>
    </Frame>
</Desc>

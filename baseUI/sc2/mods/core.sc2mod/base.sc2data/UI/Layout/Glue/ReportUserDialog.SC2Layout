<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <DescFlags val="Locked"/>

    <Frame type="ReportUserDialog" name="ReportUserDialog" template="StandardBattlenetTemplates/ConfirmationDialogTemplate">
        <Frame type="Pulldown" name="ReportReasonPulldown" template="StandardBattlenetTemplates/BattlenetPulldownTemplate">
            <Anchor side="Top" relative="$parent/MessageLabel" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent/BackgroundFrame" pos="Mid" offset="-200"/>
            <Width val="400"/>
        </Frame>

        <Frame type="Label" name="DescriptionLabel">
            <Anchor side="Top" relative="$parent/ReportReasonPulldown" pos="Max" offset="20"/>
            <Anchor side="Left" relative="$parent/BackgroundFrame" pos="Min" offset="300"/>
            <Anchor side="Right" relative="$parent/BackgroundFrame" pos="Max" offset="-300"/>
            <Height val="40"/>
            <Style val="StandardDialogMessage"/>
            <Text val="@UI/ReportUserDialogDescription"/>
        </Frame>
        
        <Frame type="Image" name="BgImage">
            <Anchor side="Top" relative="$parent/DescriptionLabel" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent/BackgroundFrame/BorderImage" pos="Min" offset="60"/>
            <Anchor side="Right" relative="$parent/BackgroundFrame/BorderImage" pos="Max" offset="-60"/>
            <Height val="120"/>
            <Texture val="@UI/Glues_Battlenet_PageAssets_ContainerBorder"/>
            <TextureType val="NineSlice"/>
        </Frame>

        <Frame type="EditBox" name="ReportUserEditBox">
            <Anchor side="Top" relative="$parent/BgImage" pos="Min" offset="5"/>
            <Anchor side="Left" relative="$parent/BgImage" pos="Min" offset="5"/>
            <Anchor side="Bottom" relative="$parent/BgImage" pos="Max" offset="-5"/>
            <Anchor side="Right" relative="$parent/BgImage" pos="Max" offset="-5"/>
            <MultiLine val="true"/>
            <LoseFocusOnEsc val="true"/>
            <Style val="@StandardEditBox"/>

            <Frame type="Label" name="SearchTextLabel">
                <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
                <Style val="@StandardEditBoxSearchText"/>
            </Frame>
        </Frame>

        <Frame type="Button" name="Button">
            <Anchor side="Top" relative="$parent/BgImage" pos="Max" offset="30"/>
            <Text val="@UI/ReportUserDialogAcceptButton"/>
        </Frame>

        <Frame type="Button" name="SecondButton">
            <Text val="@UI/Cancel_Control"/>
        </Frame>
        
        <StateGroup name="ReportTextStateGroup">
            <State name="EmptyTextState">
                <When type="Property" frame="ReportUserEditBox" Text=""/>
                <Action type="SetProperty" frame="Button" Enabled="false"/>
            </State>
            
            <State name="TextState">
                <Action type="SetProperty" frame="Button" Enabled="true"/>
            </State>
        </StateGroup>
    </Frame>
</Desc>

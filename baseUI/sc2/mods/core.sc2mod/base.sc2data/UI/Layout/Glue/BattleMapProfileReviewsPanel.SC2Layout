<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <DescFlags val="Locked"/>

    <Animation name="HelpfulHoverTemplate">
        <Event event="OnMouseEnter" action="Reset,Play"/>
        <Event event="OnMouseExit" action="Reset,Stop"/>
        <Event event="OnMouseEnter" action="Reset,Play" frame="$parent/ReviewLabel"/>
        <Event event="OnMouseExit" action="Reset,Stop" frame="$parent/ReviewLabel"/>

        <Controller type="Visibility" end="Pause" frame="$parent/HelpfulInfoLabel">
            <Key type="Bool" time="0" value="True"/>
        </Controller>

        <Controller type="Fade" end="Pause" frame="$parent/HelpfulButton">
            <Key type="Curve" time="0" value="255" out="Auto"/>
        </Controller>

        <Controller type="Fade" end="Pause" frame="$parent/ReportButton">
            <Key type="Curve" time="0" value="255" out="Auto"/>
        </Controller>
    </Animation>
    
    <Frame type="BattleMapReviewListBoxItem" name="ListBoxItemTemplate">
        <!-- This frame determines the size of the list box item -->
        <Frame type="Frame" name="AnchorFrame">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Bottom" relative="$parent/TimeLabel" pos="Max" offset="10"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
        </Frame>
        
        <Frame type="Image" name="Background">
            <Anchor relative="$parent"/>
            <Texture val="@UI/SC2_UI_Battlenet_Glue_Arcade_MainListItem_Normal"/>
            <TextureType val="NineSlice"/>
            <AcceptsMouse val="true"/>
            <Animation name="HelpfulHover" template="BattleMapProfileReviewsPanel/HelpfulHoverTemplate"/>
        </Frame>

        <Frame type="AvatarFrame" name="AvatarFrame" template="StandardTemplates/AvatarFrameMediumTemplate">
            <Anchor side="Top" relative="$parent" pos="Min" offset="10"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="10"/>
            <AcceptsMouse val="true"/>
            <ContextMenu val="$parent/UserContextMenu"/>
            <BypassOnlineChecks val="true"/>
        </Frame>
        
        <Frame type="Label" name="AuthorLabel">
            <Anchor side="Top" relative="$parent/AvatarFrame" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent/AvatarFrame" pos="Max" offset="10"/>
            <Anchor side="Right" relative="$parent/HelpfulLabel" pos="Min" offset="-10"/>
            <Style val="@Arcade_GameInfo_Author"/>
        </Frame>

        <Frame type="ProgressBar" name="RatingProgressBar">
            <Anchor side="Top" relative="$parent/AuthorLabel" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/AuthorLabel" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="-10"/>
            <Width val="114"/>
            <Height val="24"/>
            <Texture val="@UI/SC2_UI_Battlenet_Glue_Arcade_RatingStars"/>
            <Color val="FFFFFF"/>
            <ColorStep val="FFFFFF"/>
            <MinValue val="0"/>
            <MaxValue val="5"/>
        </Frame>

        <Frame type="Label" name="HelpfulLabel">
            <Anchor side="Top" relative="$parent/AuthorLabel" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent/RatingProgressBar" pos="Min" offset="0"/>
            <Style val="@Arcade_GameInfo_Description"/>
        </Frame>

        <Frame type="Label" name="ReviewLabel">
            <Anchor side="Top" relative="$parent/AuthorLabel" pos="Max" offset="20"/>
            <Anchor side="Left" relative="$parent/AvatarFrame" pos="Max" offset="10"/>
            <Anchor side="Right" relative="$parent/AnchorFrame" pos="Max" offset="-10"/>
            <Style val="@Arcade_GameInfo_Description"/>
            <AutoSizeClamps minHeight="40"/>
            <Options val="NewLineIfTruncated"/>
            <AcceptsMouse val="true"/>
        </Frame>

        <Frame type="Label" name="TimeLabel">
            <Anchor side="Top" relative="$parent/ReviewLabel" pos="Max" offset="10"/>
            <Anchor side="Right" relative="$parent/ReviewLabel" pos="Max" offset="0"/>
            <Style val="@Arcade_GameInfo_Description"/>
        </Frame>

        <Frame type="Label" name="HelpfulInfoLabel">
            <Anchor side="Top" relative="$parent/ReviewLabel" pos="Max" offset="10"/>
            <Anchor side="Left" relative="$parent/ReviewLabel" pos="Min" offset="0"/>
            <Style val="@Arcade_GameInfo_Description"/>
            <Visible val="false"/>
        </Frame>

        <!-- TODO: Button art -->
        <Frame type="Button" name="HelpfulButton" template="StandardTemplates/StandardCloseButtonTemplate">
            <Anchor side="Top" relative="$parent/HelpfulInfoLabel" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/HelpfulInfoLabel" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent/HelpfulInfoLabel" pos="Max" offset="0"/>
            <Tooltip val="@UI/BattleMapReviewListBoxItem/NotHelpfulTooltip"/>
            <Alpha val="0"/>
            <Animation name="HelpfulHover" template="BattleMapProfileReviewsPanel/HelpfulHoverTemplate"/>
        </Frame>
        
        <Frame type="Button" name="ReportButton" template="StandardTemplates/StandardCloseButtonTemplate">
            <Anchor side="Top" relative="$parent/HelpfulButton" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/HelpfulButton" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent/HelpfulButton" pos="Max" offset="10"/>
            <Tooltip val="@UI/BattleMapReviewListBoxItem/ReportTooltip"/>
            <Alpha val="0"/>
            <Animation name="HelpfulHover" template="BattleMapProfileReviewsPanel/HelpfulHoverTemplate"/>
        </Frame>

        <Frame type="BattleUserContextMenu" name="UserContextMenu" template="BattleUserContextMenu/BattleUserContextMenu">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
        </Frame>

        <StateGroup name="HelpfulStateGroup">
            <DefaultState val="NotHelpfulState"/>
            
            <State name="NotHelpfulState">
                <When type="AnimationState" frame="$this" HelpfulState="NotHelpful"/>
                <Action type="SetProperty" frame="HelpfulButton" Visible="true"/>
                <Action type="SetProperty" frame="ReportButton" Visible="true"/>
                <Action type="SetProperty" frame="HelpfulInfoLabel" Text="@UI/BattleMapReviewListBoxItem/NotHelpful"/>
            </State>

            <State name="PendingState">
                <When type="AnimationState" frame="$this" HelpfulState="Pending"/>
                <Action type="SetProperty" frame="HelpfulButton" Visible="false"/>
                <Action type="SetProperty" frame="ReportButton" Visible="false"/>
                <Action type="SetProperty" frame="HelpfulInfoLabel" Text="@UI/BattleMapReviewListBoxItem/NotHelpful"/>
            </State>

            <State name="HelpfulState">
                <When type="AnimationState" frame="$this" HelpfulState="Helpful"/>
                <Action type="SetProperty" frame="HelpfulButton" Visible="false"/>
                <Action type="SetProperty" frame="ReportButton" Visible="false"/>
                <Action type="SetProperty" frame="HelpfulInfoLabel" Text="@UI/BattleMapReviewListBoxItem/HelpfulInfo"/>
            </State>
        </StateGroup>
    </Frame>

    <Frame type="BattleMapProfileReviewsPanel" name="BattleMapProfileReviewsPanelTemplate">
        <Anchor relative="$parent"/>
        
        <!-- Child elements anchor to this frame.  This is so the review popup can anchor to the entire screen -->
        <Frame type="Frame" name="AnchorFrame">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
        </Frame>
        
        <Frame type="Image" name="Background">
            <Anchor side="Top" relative="$parent/AnchorFrame" pos="Min" offset="0"/>
            <Anchor side="Left" relative="$parent/AnchorFrame" pos="Min" offset="10"/>
            <Anchor side="Right" relative="$parent/AnchorFrame" pos="Max" offset="-10"/>
            <Anchor side="Bottom" relative="$parent/AnchorFrame" pos="Max" offset="0"/>
            <Texture val="@UI/SC2_UI_Battlenet_Glue_Arcade_MainListItem_Normal"/>
            <TextureType val="NineSlice"/>
        </Frame>

        <Frame type="Label" name="SortLabel">
            <Anchor side="Top" relative="$parent/SortPulldown" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/SortPulldown" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent/Background" pos="Min" offset="10"/>
            <Style val="@Arcade_Subtitle"/>
            <Text val="@UI/BattleMapProfileReviewsPanel/Sort"/>
        </Frame>

        <Frame type="Pulldown" name="SortPulldown" template="StandardTemplates/StandardPulldownTemplate">
            <Anchor side="Top" relative="$parent/Background" pos="Min" offset="10"/>
            <Anchor side="Left" relative="$parent/SortLabel" pos="Max" offset="0"/>
        </Frame>

        <Frame type="CheckBox" name="VersionCheckBox" template="StandardTemplates/StandardCheckBoxTemplate">
            <Anchor side="Top" relative="$parent/SortPulldown" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/SortPulldown" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent/SortPulldown" pos="Max" offset="10"/>
            <Checked val="true"/>
        </Frame>

        <Frame type="Label" name="VersionLabel">
            <Anchor side="Top" relative="$parent/VersionCheckBox" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/VersionCheckBox" pos="Mid" offset="0"/>
            <Anchor side="Left" relative="$parent/VersionCheckBox" pos="Max" offset="0"/>
            <Style val="@Arcade_Subtitle"/>
            <Text val="@UI/BattleMapProfileReviewsPanel/Version"/>
        </Frame>

        <Frame type="Button" name="ReviewButton" template="StandardBattlenetTemplates/BattlenetSmallButtonTemplate">
            <Anchor side="Top" relative="$parent/SortPulldown" pos="Mid" offset="0"/>
            <Anchor side="Bottom" relative="$parent/SortPulldown" pos="Mid" offset="0"/>
            <Anchor side="Right" relative="$parent/Background" pos="Max" offset="-10"/>
            <Text val="@UI/BattleMapProfileReviewsPanel/Review"/>
        </Frame>
        
        <Frame type="ListBox" name="ListBox">
            <Anchor side="Top" relative="$parent/SortPulldown" pos="Max" offset="10"/>
            <Anchor side="Left" relative="$parent/Background" pos="Min" offset="10"/>
            <Anchor side="Bottom" relative="$parent/Background" pos="Max" offset="-10"/>
            <Anchor side="Right" relative="$parent/Background" pos="Max" offset="-10"/>
            <Insets top="0" left="0" bottom="0" right="0"/>
            <ItemDesc val="BattleMapProfileReviewsPanel/ListBoxItemTemplate"/>
            <ItemHeight val="0"/>
            <ItemGap val="2"/>
            <HighlightOnHover val="false"/>
            <SaveScrollHeightOnClear val="false"/>

            <Frame type="ScrollBar" name="ScrollBar">
                <Anchor side="Top" relative="$parent" pos="Min" offset="-4"/>
                <Anchor side="Right" relative="$parent" pos="Max" offset="3"/>
                <Anchor side="Bottom" relative="$parent" pos="Max" offset="4"/>
                
                <Image val="$root/StandardBattlenetTemplates/GluesSocialScrollBarBackgroundImage"/>
                <Button val="$root/StandardBattlenetTemplates/GluesSocialScrollBarButtonTemplate"/>
                <Orientation val="Vertical"/>
                <Width val="16"/>
            </Frame>
        </Frame>

        <Frame type="Frame" name="WriteReviewContainer">
            <Anchor relative="$parent"/>
            <Visible val="false"/>

            <Animation name="Show">
                <Event event="OnClick" action="Reset,Play" frame="$parent/ReviewButton"/>
                <Event event="OnClick" action="DirectionReverse,Play" frame="SubmitButton"/>
                <Event event="OnClick" action="DirectionReverse,Play" frame="CancelButton"/>

                <Controller type="Fade" end="Pause">
                    <Key type="Curve" time="0" value="0" out="Slow"/>
                    <Key type="Curve" time=".175" value="255" in="Auto"/>
                </Controller>

                <Controller type="Visibility" end="Pause">
                    <Key type="Bool" time="0" value="false"/>
                    <Key type="Bool" time=".001" value="true"/>
                    <Key type="Bool" time=".175" value="true"/>
                </Controller>
            </Animation>
            
            <!-- This tooltip is just for blocking tooltips behind this panel -->
            <Frame type="StandardTooltip" name="WriteReviewTooltip">
                <Frame type="Label" name="Label">
                    <Anchor relative="$parent"/>
                </Frame>
            </Frame>

            <Frame type="Image" name="FullscreenBlackoutImage">
                <Anchor relative="$parent"/>
                <Color val="0,0,0"/>
                <Alpha val="180"/>
                <AcceptsMouse val="true"/>
                <TooltipFrame val="WriteReviewTooltip"/>
            </Frame>

            <Frame type="Image" name="LeftBGGlowPattern">
                <Anchor side="Top" relative="$parent/BackgroundImage" pos="Mid" offset="0"/>
                <Anchor side="Bottom" relative="$parent/BackgroundImage" pos="Mid" offset="0"/>
                <Anchor side="Right" relative="$parent/BackgroundImage" pos="Min" offset="40"/>
                <Texture val="@UI/Glues_Battlenet_DialogBox_BackGlow"/>
            </Frame>

            <Frame type="Image" name="RightBGGlowPattern">
                <Anchor side="Top" relative="$parent/BackgroundImage" pos="Mid" offset="0"/>
                <Anchor side="Bottom" relative="$parent/BackgroundImage" pos="Mid" offset="0"/>
                <Anchor side="Left" relative="$parent/BackgroundImage" pos="Max" offset="-40"/>
                <Texture val="@UI/Glues_Battlenet_DialogBox_BackGlow"/>
                <TextureCoords top="0.0" left="1.0" bottom="1.0" right="0.0"/>
            </Frame>

            <Frame type="Image" name="BackgroundImage">
                <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
                <Texture val="@UI/Glues_Battlenet_DialogBox_BG"/>
                <TextureType val="HorizontalBorder"/>
                <Tiled val="false"/>
                <Width val="800"/>
                <Height val="600"/>
            </Frame>

            <Frame type="Image" name="TopHexPattern">
                <Anchor side="Top" relative="$parent/BackgroundImage" pos="Min" offset="11"/>
                <Anchor side="Left" relative="$parent/BackgroundImage" pos="Mid" offset="0"/>
                <Anchor side="Right" relative="$parent/BackgroundImage" pos="Mid" offset="0"/>
                <Texture val="@UI/Glues_Battlenet_DialogBox_HexPattern"/>
            </Frame>

            <Frame type="Image" name="BottomHexPattern">
                <Anchor side="Bottom" relative="$parent/BackgroundImage" pos="Max" offset="-11"/>
                <Anchor side="Left" relative="$parent/BackgroundImage" pos="Mid" offset="0"/>
                <Anchor side="Right" relative="$parent/BackgroundImage" pos="Mid" offset="0"/>
                <Texture val="@UI/Glues_Battlenet_DialogBox_HexPattern"/>
                <TextureCoords top="1.0" left="1.0" bottom="0.0" right="0.0"/>
            </Frame>

            <Frame type="Label" name="TitleLabel">
                <Anchor side="Top" relative="$parent/BackgroundImage" pos="Min" offset="50"/>
                <Anchor side="Left" relative="$parent/BackgroundImage" pos="Min" offset="30"/>
                <Anchor side="Right" relative="$parent/BackgroundImage" pos="Max" offset="-30"/>
                <Style val="@BattlenetDialogTitle"/>
                <Text val="@UI/BattleMapProfileReviewsPanel/WriteReview"/>
            </Frame>

            <Frame type="BattleMapRatingSelector" name="RatingSelector" template="StandardBattlenetTemplates/BattleMapRatingSelectorTemplate">
                <Anchor side="Top" relative="$parent/TitleLabel" pos="Max" offset="20"/>
                <Anchor side="Right" relative="$parent/TitleLabel" pos="Mid" offset="0"/>
                <Anchor side="Left" relative="$parent/TitleLabel" pos="Mid" offset="0"/>
            </Frame>

            <Frame type="Image" name="EditBoxBg">
                <Anchor side="Top" relative="$parent/RatingSelector" pos="Max" offset="5"/>
                <Anchor side="Left" relative="$parent/BackgroundImage" pos="Min" offset="30"/>
                <Anchor side="Right" relative="$parent/BackgroundImage" pos="Max" offset="-30"/>
                <Anchor side="Bottom" relative="$parent/SubmitButton" pos="Min" offset="-20"/>
                <Texture val="@UI/Glues_Battlenet_PageAssets_ContainerBorder"/>
                <TextureType val="NineSlice"/>
            </Frame>

            <Frame type="EditBox" name="ReviewEditBox">
                <Anchor side="Top" relative="$parent/EditBoxBg" pos="Min" offset="5"/>
                <Anchor side="Left" relative="$parent/EditBoxBg" pos="Min" offset="5"/>
                <Anchor side="Right" relative="$parent/EditBoxBg" pos="Max" offset="-5"/>
                <Anchor side="Bottom" relative="$parent/EditBoxBg" pos="Max" offset="-5"/>
                <MultiLine val="true"/>
                <MaxCharacters val="1024"/>
                <LoseFocusOnEsc val="true"/>
                <Style val="@Arcade_Review_EditBox"/>

                <Frame type="ScrollBar" name="ScrollBar">
                    <Anchor side="Top" relative="$parent" pos="Min" offset="-4"/>
                    <Anchor side="Right" relative="$parent" pos="Max" offset="3"/>
                    <Anchor side="Bottom" relative="$parent" pos="Max" offset="4"/>
                    <Image val="$root/StandardBattlenetTemplates/StandardBattlenetScrollBarBackgroundImage"/>
                    <Button val="$root/StandardBattlenetTemplates/StandardBattlenetScrollBarButtonTemplate"/>
                    <Orientation val="Vertical"/>
                    <Width val="24"/>
                    <CollapseLayout val="true"/>
                </Frame>
            </Frame>

            <Frame type="Button" name="SubmitButton" template="StandardBattlenetTemplates/BattlenetAlternateButtonTemplate">
                <Anchor side="Bottom" relative="$parent/BackgroundImage" pos="Max" offset="-30"/>
                <Anchor side="Right" relative="$parent/BackgroundImage" pos="Mid" offset="-3"/>
                <Text val="@UI/BattleMapProfileReviewsPanel/SubmitReview"/>
                <Width val="288"/>
            </Frame>

            <Frame type="Button" name="CancelButton" template="StandardBattlenetTemplates/BattlenetStandardButtonTemplate">
                <Anchor side="Top" relative="$parent/SubmitButton" pos="Min" offset="0"/>
                <Anchor side="Left" relative="$parent/BackgroundImage" pos="Mid" offset="3"/>
                <Text val="@UI/StandardDialog_Cancel_Control"/>
                <Shortcut val="@UI/ScreenNavigationBack_Hotkey"/>
                <Width val="288"/>
            </Frame>

            <StateGroup name="SubmitReviewStateGroup">
                <DefaultState val="SubmitEnabledState"/>

                <State name="NoRatingState">
                    <When type="Property" frame="RatingSelector/RatingProgressBar" Value="0"/>
                    <Action type="SetProperty" frame="SubmitButton" Enabled="false"/>
                    <Action type="SetProperty" frame="SubmitButton" Tooltip="@UI/BattleMapProfileReviewsPanel/SubmitReviewNoRating"/>
                </State>

                <State name="NoReviewState">
                    <When type="Property" frame="ReviewEditBox" Text=""/>
                    <Action type="SetProperty" frame="SubmitButton" Enabled="false"/>
                    <Action type="SetProperty" frame="SubmitButton" Tooltip="@UI/BattleMapProfileReviewsPanel/SubmitReviewNoText"/>
                </State>

                <State name="SubmitEnabledState">
                    <Action type="SetProperty" frame="SubmitButton" Enabled="true"/>
                    <Action type="SetProperty" frame="SubmitButton" Tooltip=""/>
                </State>
            </StateGroup>
        </Frame>
    </Frame>
</Desc>

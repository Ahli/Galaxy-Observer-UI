<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<Desc>
    <Constant name="AchievementFrameDesaturationColor" val="255, 255, 255"/>
    <Constant name="AchievementFrameDesaturationColor_Prot" val="128, 128, 128"/>
    <Constant name="AchievementFrameDesaturationColor_Terr" val="255, 255, 255"/>
    <Constant name="AchievementFrameDesaturationColor_Zerg" val="255, 255, 255"/>
    
    <Frame type="AchievementFrame" name="AchievementFrameTemplate">
        <Width val="640"/>
        <Height val="153"/>
        <AcceptsMouse val="true"/>

        <Frame type="Image" name="BackgroundImage">
            <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="0"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="0"/>
            <Texture val="@@UI/AchievementFrameBorder" layer="0"/>
            <TextureType val="EndCap" layer="0"/>
            <Tiled val="true" layer="0"/>
            <DesaturationColor val="##AchievementFrameDesaturationColor"/>
        </Frame>

        <Frame type="Image" name="IconImage">
            <Anchor side="Top" relative="$parent" pos="Min" offset="40"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="44"/>
            <Width val="76"/>
            <Height val="76"/>
        </Frame>

        <Frame type="Label" name="NameLabel">
            <Style val="@@AchievementFrameName"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="40"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="145"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="-145"/>
        </Frame>

        <Frame type="Label" name="DescriptionLabel">
            <Style val="@@AchievementFrameDescription"/>
            <Anchor side="Top" relative="$parent/NameLabel" pos="Max" offset="5"/>
            <Anchor side="Left" relative="$parent" pos="Min" offset="145"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="-145"/>
        </Frame>

        <Frame type="Label" name="PointsLabel">
            <Style val="@@AchievementFramePoints"/>
            <Anchor side="Top" relative="$parent" pos="Min" offset="40"/>
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="-35"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="-44"/>
            <Width val="84"/>
        </Frame>
    </Frame>
</Desc>
